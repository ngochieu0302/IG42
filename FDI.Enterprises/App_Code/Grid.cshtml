@helper ActionActive(object id, string title, bool? status)
{
    if (status == false && BaseController.CheckAction("Active"))
    {
    <a href="#@id" class="btn btn-sm btn-default" data-event="active" title="Duyệt: @title">
        <i class="fa fa-check"></i>
    </a>
    }
}

@helper ActionShow(object id, string title, bool? isShow)
{
    if (BaseController.CheckAction("show"))
    {
    <a href="#@id" data-event="@(isShow == true ? "hide" : "show")" title="@(isShow == true ? "Ẩn" : "Hiển thị"): @title"><i class="@(isShow == true ? "fa fa-minus-circle text-default" : "fa fa-eye text-success")"></i></a>
    }
}

@helper DisplayShow(string title, bool? status)
{
    <i class="@(status == true ? "fa fa-check text-success" : "fa fa-times text-danger tex")" title="@(status == true ? "Đang đượcc kích hoạt" : "Đang ẩn")"></i>
}
@helper DisplayShowStrike(string title, bool isShow)
{
    if (isShow)
    {
    @title
    }
    else
    {
    <strike>@title</strike>
    }
}

