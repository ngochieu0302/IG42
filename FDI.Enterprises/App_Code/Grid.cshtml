@using FDI.Enterprises.Controllers

@helper ActionEdit(object id, string title, bool check = true)
{
    if (BaseController.CheckAction("edit"))
    {
    <a href="#@id" class="@(check?("btn btn-sm btn-default"):"")" data-event="edit" title="Chỉnh sửa: @title"><i class="fa fa-pencil-square-o" style="color: #04A827;"></i></a>    
    }
}

@helper ActionAdd(object id, string title, bool check = true)
{
if (BaseController.CheckAction("add"))
{
        <a href="#@id" class="@(check?("btn btn-sm btn-default"):"")" data-event="edit" title="Chỉnh sửa: @title"><i class="fa fa-pencil-square-o" style="color: #04A827;"></i></a>
}
}

@helper ActionEdit(object id , Guid userid, string title, bool check = true)
{
    if (BaseController.CheckAction("edit"))
    {
        var url = id + "&userid=" + userid;
    <a href="#@url" class="@(check?("btn btn-sm btn-default"):"")" data-event="edit" title="@title"><i class="fa fa-pencil-square-o" style="color: #04A827;"></i></a>    
    }
}

