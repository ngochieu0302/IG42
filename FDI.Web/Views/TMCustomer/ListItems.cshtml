@using FDI.CORE
@model FDI.Simple.ModelTMCustomerItem

@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                <tr>
                    <th class="act_roles" style="width: 2%;">
                        <input value="" type="checkbox"/>
                    </th>
                    <th style="width: 55px;" class="text-center"><a href="#Field=ID">ID</a></th>
                    <th style="width: 120px;" class="text-center">Họ và Tên</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">SĐT</th>
                    <th class="text-center">Địa chỉ</th>
                    <th class="text-center">Ngày tạo</th>
                    <th class="text-center">Ngày sinh</th>
                    <th class="text-center">Quản trị</th>
                    <th class="text-center"><a href="#Field=Show">Hiển thị</a></th>
                    <th style="width: 12%;" class="text-center">Thao tác</th>
                </tr>
                </thead>

                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.FullName">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td class="text-center">@item.ID</td>
                        <td>@item.FullName</td>
                        <td>@item.Email</td>
                        <td>@item.Mobile</td>
                        <td>@item.Address</td>
                        <td>@item.DateCreated.DecimalToString("dd/MM/yyyy HH:ss:mm")</td>
                        <td>@item.Birthday.DecimalToString("dd/MM/yyyy HH:ss:mm")</td>
                        <th class="text-center">
                            <i style="color: #04A827;" class="@(item.IsAdmin == true ? "fa fa-check" : "fa fa-times")"></i>
                        </th>
                        <td class="text-center">@Grid.ActionShow(item.ID, item.FullName, item.IsActive)</td>
                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.FullName)
                            @Grid.ActionEdit(item.ID, item.FullName)
                            @Grid.ActionDelete(item.ID, item.FullName)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
<style>
    .imgThum img{
        width: 80px;
        height: 80px;
    }
</style>