@using FDI.CORE
@model FDI.Simple.TMCustomerItem

@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}


<div class="modal-body">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-picture-o"></i>Thông tin về khách hàng
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <tr>
                        <td style="width: 15%">
                            <label>Tên khách hàng</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.FullName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Email</label>
                        </td>
                        <td>
                            @Html.Raw(Model.Email)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Số điện thoại</label>
                        </td>
                        <td id="type">
                            @Html.DisplayFor(model => model.Mobile)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Địa chỉ</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                    </tr>
                    
                    
                    <tr>
                        <td>
                            <label>Ngày đăng ký</label>
                        </td>
                        <td>
                            @Model.DateCreated.DecimalToString("dd/MM/yyyy HH:ss:mm")
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label>Ngày duyệt</label>
                        </td>
                        <td>
                            @Model.DateActive.DecimalToString("dd/MM/yyyy HH:ss:mm")
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label>Người duyệt</label>
                        </td>
                        <td>
                            @Model.UserActive
                        </td>
                    </tr>
                 
                    <tr>
                        <td>
                            <label>Kích hoạt</label>
                        </td>
                        <td>
                            @Grid.DisplayShow(Model.FullName, Model.IsActive)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
</div>


