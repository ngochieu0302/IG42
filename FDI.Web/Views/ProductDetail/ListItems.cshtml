@using FDI.CORE
@model FDI.Simple.ModelShopProductDetailItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" />
                        </th>
                        <th class="text-center"><a href="#Field=ID">ID</a></th>
                        <th class="text-center"><a href="#Field=Code">Mã SP</a></th>
                        <th class="text-center"><a href="#Field=Code">Ảnh</a></th>
                        <th><a href="#Field=Name">Tên sản phẩm</a></th>
                        <th class="text-center">Chuyên mục</th>
                        <th class="text-center"><a href="#Field=StartDate">Ngày tạo</a></th>
                        <th><a href="#Field=PriceNew">Giá bán</a></th>
                        <th><a href="#Field=PriceOld">Giá bán ct</a></th>
                        <th>Cảnh báo giá bán</th>
                        <th><a href="#Field=Value">Giá Cost SP</a></th>
                        <th><a href="#Field=PriceCost">Giá Cost ct</a></th>
                        <th>Cảnh báo ct</th>
                        <th class="text-center"><a href="#Field=UnitName">Đơn vị</a></th>
                        <th class="text-right">Ẩn/Hiện</th>
                        <th class="text-right">Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {


            <tr title="@item.Name">
                <td class="act_roles"><input type="checkbox" value="@item.ID" class="check"></td>
                <td class="text-center">@item.ID</td>
                <td class="text-center">@item.Code</td>
                <td class="text-center"><img src="@item.UrlPicture.Picture()" class="lazyImg" width="80px"></td>
                <td>@Grid.DisplayShowStrike(item.Name, item.IsShow.HasValue && item.IsShow.Value)</td>
                <td class="text-center">@item.Catename</td>
                <td class="text-right">@item.StartDate.DecimalToString("dd/MM/yyyy")</td>
                <td class="text-right">@item.Price.Money()</td>
                <td class="text-right">@item.PriceOld.Money()</td>
                <td class="text-center">
                    @{
                        var per = item.PriceOld * 5 / 100;
                        if (item.Price > (item.PriceOld + per))
                        {
                            <i title="Giá bán ra đang lớn hơn so với giá sản phẩm @(((item.Price ?? 0) - (item.PriceOld ?? 0)).Money())" style="color: red" class="fa fa-arrow-up" aria-hidden="true"></i>
                        }
                        if ((item.Price) < (item.PriceOld - per))
                        {
                            <i title="Giá bán ra đang nhỏ hơn so với giá sản phẩm @(((item.PriceOld ?? 0) - (item.Price ?? 0)).Money())" style="color: red" class="fa fa-arrow-down" aria-hidden="true"></i>
                        }
                    }
                </td>
                <td class="text-right">@item.Value.Money()</td>
                <td class="text-right">@item.PriceCost.Money()</td>
                <td class="text-center">
                    @{
                        if (item.DetailRecipeItem.Any())
                        {
                            var first = item.DetailRecipeItem.FirstOrDefault();
                            var priceV = first.LstRecipeProductValues.Sum(c => c.ValuePrice ?? 0);
                            var priceD = first.LstRecipeProductDetails.Sum(c => c.ProductPrice ?? 0);
                            var pricecost = priceV + priceD;
                            var per1 = item.Value * 5 / 100;
                            if (pricecost > (item.Value + per1))
                            {
                                <i title="Tổng giá cost theo công thức đang lớn hơn so với giá cost sản phẩm @((pricecost - (item.Value ?? 0)).Money())" style="color: red" class="fa fa-arrow-up" aria-hidden="true"></i>
                            }
                            if (pricecost < (item.Value - per1))
                            {
                                <i title="Tổng giá cost theo công thức đang nhỏ hơn so với giá cost sản phẩm @(((item.Value ?? 0) - pricecost).Money())" style="color: red" class="fa fa-arrow-down" aria-hidden="true"></i>
                            }
                        }
                        
                    }
                </td>
                <td class="text-center">@item.UnitName</td>
                <td class="text-center">
                    @Grid.ActionShow(item.ID, item.Name, item.IsShow)
                </td>
                <td class="text-right">
                    <a class="btn btn-sm btn-default" data-id="@item.ID" data-event="addProduct" title="Thêm mới sản phẩm"><i class="fa fa-plus"></i></a>
                    <a href="#@item.ID" class="btn btn-sm btn-default" data-id="@item.ID" data-event="Copy" title="Copy sản phẩm"><i class="fa fa-clone"></i></a>
                    <a href="/Product#productDetailId=@item.ID" class="btn btn-sm btn-default" data-id="@item.ID" data-event="ListProduct" title="Xem danh sách sản phẩm"><i class="fa fa-list-ul"></i></a>
                    @*<a class="btn btn-sm btn-default" data-do="@(!item.DetailRecipeItem.Any() ? "active" : "notactive")" data-id="@item.ID" data-event="AddRecipe" title="Lập công thức"><i class="fa fa-cutlery"></i></a>*@
                    @Grid.ActionView(item.ID, item.Name)
                    @Grid.ActionEdit(item.ID, item.Name)
                    @Grid.ActionDelete(item.ID, item.Name)
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });

    $("[data-event='addProduct']").click(function () {
        FdiOpenDialog("#dialog-form", "/ProductDetail/AjaxFormAdd?do=UserModule&productId=" + $(this).attr("data-id"), "Trạng thái");
    });
    $("[data-event='AddRecipe']").click(function () {
        var id = $(this).attr("data-id");
        var actiondo = $(this).attr("data-do");
        FdiOpenDialog("#dialog-form", "/ProductDetail/AjaxRecipe?do=" + actiondo + "&ItemID=" + id, "Lập công thức cho sản phẩm");
    });

    $("[data-event='Copy']").click(function () {
        var id = $(this).attr("data-id");
        swal({
            title: "",
            text: "Bạn có muốn copy sản phẩm này không?",
            type: "warning",
            showCancelButton: true,
            confirmButtonText: "Copy",
            cancelButtonText: "Hủy",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                if (isConfirm) {
                    $.post("/ProductDetail/Actions?do=View&ItemID=" + id, function (data) {
                        if (data.Erros) {
                            createMessage("Có lỗi xảy ra", data.Message);
                        }
                        else {
                            createCloseMessage("Thông báo", data.Message, "");
                        }
                    });
                }
                swal.close();
            });
        return false;
    });
</script>