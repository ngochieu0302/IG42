@using FDI.CORE
@model FDI.Simple.ModelAreaStaticItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll"/>
                        </th>
                        <th><a href="#Field=ID">ID</a></th>
                        <th><a href="#Field=Name">Khu vực</a></th>
                        <th><a href="#Field=Total">Tổng hàng hóa (Con)</a></th>
                        <th><a href="#Field=TotalB">Tổng hàng Đã bán (Con)</a></th>
                        <th><a href="#Field=TotalC">Tổng hàng Còn tồn (Con)</a></th>
                        @*<th class="text-right"></th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListItems)
                    {
                        <tr data-id="@item.ID" title="@item.Name">
                            <td class="act_roles" style="width: 50px">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Total.Quantity()</td>
                            <td>@item.TotalB.Quantity()</td>
                            <td>@item.TotalC.Quantity()</td>
                            @*<td class="text-right">
                                @Grid.ActionView(item.ID, item.Name)
                            </td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
