@using FDI.CORE
@model List<FDI.Simple.RewardHistoryItem>
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var stt = 1;
}
<div class="modal-body">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-newspaper-o"></i>Chi tiết thưởng trong tháng [ TỔNG THƯỞNG: @(Model!=null?Model.Sum(c=>c.Price).Money():"0") ]
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                    <thead>
                        <tr>                            
                            <th class="text-center">ID</th>
                            <th class="text-center"><a href="#Field=Date">Thời gian</a></th>
                            <th class="text-center"><a href="#Field=CustomerName">Khách hàng</a></th>
                            <th class="text-center"><a href="#Field=OrderID">Số HD</a></th>
                            <th class="text-right"><a href="#Field=Price">Số tiền</a></th>
                            <th class="text-right"><a href="#Field=Price">Tổng HĐ</a></th>
                            <th class="text-center"><a href="#Field=Type">Loại</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr data-id="@item.ID">                                    
                                    <td class="text-center">@(stt++)</td>
                                    <td class="text-center">@item.Date.DecimalToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-center">@item.CustomerName</td>
                                    <td class="text-center">@item.OrderID</td>
                                    <td class="text-right">@string.Format("{0:0,0}", item.Price)</td>
                                    <td class="text-right">@string.Format("{0:0,0}", item.PriceOrder)</td>
                                    @if (item.Type == (int)Reward.Cus)
                                    {
                                        <td class="text-center">Thưởng trực tiếp</td>
                                    }
                                    else if (item.Type == (int)Reward.Parent)
                                    {
                                        <td class="text-center">Thưởng cha</td>
                                    }
                                    else if (item.Type == (int)Reward.Root)
                                    {
                                        <td class="text-center">thưởng ssc</td>
                                    }
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>        
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
</div>