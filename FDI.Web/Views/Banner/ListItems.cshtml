@using FDI.CORE
@model FDI.Simple.ModelBannerItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" />
                        </th>
                        <th class="text-center"><a href="#Field=ID">ID</a></th>
                        <th class="text-center"><a href="#Field=Code">Tên</a></th>
                        <th class="text-center"><a href="#Field=Code">Ảnh</a></th>
                        <th><a href="#Field=Name">Url</a></th>
                                
                        <th class="text-right">Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.Name">
                        <td class="act_roles"><input type="checkbox" value="@item.ID" class="check"></td>
                        <td class="text-center">@item.ID</td>
                        <td class="text-center">@item.Name</td>
                        <td class="text-center"><img src="@item.PictureUrl.Picture()" class="lazyImg" width="80px"></td>            
                        <td class="text-center">@item.UrlView</td>
                       
                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.Name)
                            @Grid.ActionEdit(item.ID, item.Name)
                            @Grid.ActionDelete(item.ID, item.Name)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });

    $("[data-event='addProduct']").click(function () {
        FdiOpenDialog("#dialog-form", "/ProductDetail/AjaxFormAdd?do=UserModule&productId=" + $(this).attr("data-id"), "Trạng thái");
    });
    $("[data-event='AddRecipe']").click(function () {
        var id = $(this).attr("data-id");
        var actiondo = $(this).attr("data-do");
        FdiOpenDialog("#dialog-form", "/ProductDetail/AjaxRecipe?do=" + actiondo + "&ItemID=" + id, "Lập công thức cho sản phẩm");
    });

    $("[data-event='Copy']").click(function () {
        var id = $(this).attr("data-id");
        swal({
            title: "",
            text: "Bạn có muốn copy sản phẩm này không?",
            type: "warning",
            showCancelButton: true,
            confirmButtonText: "Copy",
            cancelButtonText: "Hủy",
            closeOnConfirm: false,
            closeOnCancel: false
        },
            function (isConfirm) {
                if (isConfirm) {
                    $.post("/ProductDetail/Actions?do=View&ItemID=" + id, function (data) {
                        if (data.Erros) {
                            createMessage("Có lỗi xảy ra", data.Message);
                        }
                        else {
                            createCloseMessage("Thông báo", data.Message, "");
                        }
                    });
                }
                swal.close();
            });
        return false;
    });
</script>