@using FDI.CORE
@model FDI.Simple.ModelAgencyItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" />
                        </th>
                        <th><a href="#Field=ID">ID</a></th>
                        <th><a href="#Field=Name">Tên đại lý</a></th>
                        <th><a href="#Field=Address">Địa chỉ</a></th>
                        <th><a href="#Field=Phone">Số điện thoại</a></th>
                        <th>Số lượng hàng chưa bán</th>
                        <th class="text-right">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListItem)
                    {
                        <tr data-id="@item.ID" title="@item.Name">
                            <td class="act_roles" style="width: 50px">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.Phone</td>
                            <td>@item.Total</td>
                            <td class="text-right">
                                @Grid.ActionView(item.ID, item.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
