@using FDI.CORE
@model FDI.Simple.StorageWarehouse.ModelTotalProductToDayItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";

}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" />
                        </th>
                        <th class="text-center"><a href="#Field=ID">STT</a></th>
                        <th class="text-center"><a href="#Field=Code">Nhà cung cấp</a></th>
                        <th class="text-center"><a href="#Field=DateCreated">Số lượng</a></th>

                        <th><a href="#Field=Note">Ghi chú</a></th>
                        <th class="text-center">Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListItems != null)
                    {
                        var i = 1;
                        foreach (var item in Model.ListItems)
                        {
                            <tr data-id="@item.ID" title="@item.ToDayCode">
                                <td class="act_roles">
                                    <input type="checkbox" value="@item.ID" class="check">
                                </td>
                                <td class="text-center">@(i++)</td>

                                <td>@item.SupplierName</td>
                                <td>@item.Quantity</td>
                                <td>@item.Status</td>
                                <td class="text-center">
                                    <!-- Single button -->
                                </td>

                                <td class="text-right">
                                    @Grid.ActionView(item.ID, item.ProductName)
                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">

    $(document).ready(function () {
        registerGridView('#mygird');
        $(".btn_Inport").click(function () {
            var id = $(this).attr("data-id");
            var action = $(this).attr("data-action");
            FdiOpenDialog("#dialog-form-4", urlForm + "?ItemId=" + id + "&do=" + action, "Chỉnh sửa phiếu yêu cầu nhập kho");
        });
        $(".btn_Imported").click(function () {
            var id = $(this).attr("data-id");
            var action = $(this).attr("data-action");
            FdiOpenDialog("#dialog-form-4", urlFormModule + "?ItemId=" + id + "&do=" + action, "Nhận hàng vào kho");
        });
    });
</script>
