@model FDI.Simple.ProductSerialItem
@using FDI.CORE;
    @{
        Layout = "~/Views/Shared/_Ajax.cshtml";
    }
    <script src="~/Content/Admin/js/numeral.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#modalForm").validate({
                rules: {
                    Serial: {
                        required: true,
                        remote: "@Url.Action("CheckBySerial", "ProductSerial", new { id = Model.ID })"
                    }
                },
                messages: {
                    Serial:
                    {
                        required: "Trường này bắt buộc nhập.",
                        remote: "Tên đơn vị này đã tồn tại, Xin mời nhập tên khác."
                    }
                },
                submitHandler: function () { //onSubmit
                    PostAction("#modalForm");
                }
            });
            $('#autoProduct').autocomplete({
                serviceUrl: "/Sales/Auto?type=2",
                minChars: 1,
                delimiter: /(;)\s*/, // regex or character
                maxHeight: 400,
                onSelect: function (el) {
                    $('#autoProduct').val("");
                    $("#ProductName").val(el.title + " " + numeral(el.pricenew).format('0,0') + " đ");
                    $("#ProductID").val(el.ID);
                }
            });
        });
    </script>
    <form id="modalForm">
        <div class="modal-body">
            <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
            <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
            <input type="hidden" id="AgencyId" name="AgencyId" value="@ViewBag.AgencyId" />
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="fa fa-database"></i>Thêm mới đơn vị
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Mã sản phẩm</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="autoProduct" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Tên sản phẩm</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="ProductName" readonly value="@Model.ProductName @Model.Price.Money() đ" />
                                    <input type="hidden" name="ProductID" id="ProductID" value="@Model.ProductID" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Serial</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" name="Serial" id="Serial" value="@Model.Serial" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
            <button id="close" type="button" data-dismiss="modal" class="btn btn-sm btn-default">Đóng</button>
        </div>
    </form>