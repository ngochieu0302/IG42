@using FDI.CORE
@model FDI.Simple.ModelDNCriteriaItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col/>
                    <col class="colgroup size" />
                    <col class="colgroup custommer" />
                    <col class="colgroup size" />
                    <col class="colgroup size" />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles"><input value="" type="checkbox"/></th>
                    <th class="text-center"><a href="#Field=ID">ID</a></th>
                    <th>Tên tiêu chí</th>
                    <th class="text-center">% thưởng</th>
                    <th class="text-center">Kiểu đánh giá</th>
                    <th class="text-center">Chia đều</th>
                    <th class="text-center">Theo tầng</th>
                    <th class="text-center">Thao tác</th>
                </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.Name">
                        <td class="act_roles"><input type="checkbox" value="@item.ID" class="check"></td>
                        <td class="text-center">@item.ID</td>
                        <td>@item.Name</td>
                        <td class="text-center">@Convert.ToDouble(item.Price)</td>
                        <td class="text-center">@item.NameType</td>
                        <td class="text-center">@Grid.DisplayShow(item.Name, item.IsAll)</td>
                        <td class="text-center">@Grid.DisplayShow(item.Name, item.IsAll)</td>

                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.Name)
                            @Grid.ActionEdit(item.ID, item.Name)
                            @Grid.ActionDelete(item.ID, item.Name)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>