@{
    ViewBag.Title = "DetailOrder";
}
@using FDI.CORE
@model FDI.Simple.StorageWarehousingItem
<div class="portlet box purple ">
    <div class="portlet-title">
        <div class="caption">
            <i class="fa fa-gift"></i> Đơn hàng
        </div>
    </div>
    <div class="portlet-body form">
        <div class="form-horizontal" role="form" novalidate="novalidate">
            <div class="form-body">
                <div class="row static-info">
                    <div class="col-md-5 name"> Order #: </div>
                    <div class="col-md-7 value">
                        @Model.ID
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">Khách hàng: </div>
                    <div class="col-md-7 value">
                        @Model.CustomerName
                    </div>
                </div>
                <div class="row static-info">
                    <div class="col-md-5 name">Giờ giao hàng: </div>
                    <div class="col-md-7 value">
                        @if (Model.DateRecive != null)
                        {
                        <strong>@Model.DateRecive.Value.DecimalToString("dd/MM/yyyy HH:mm")</strong>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
