@model List<FDI.Simple.VoteItem>
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script>
    $(function () {
        $("#frm-ContentVote").validate({
            rules: {
                Name: { required: true }
            },
            messages: {
                Name: "Trường bắt buộc nhập."
            },
            submitHandler: function () { //onSubmit
                $.post("/DNTree/Actions", $("#frm-ContentVote").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $('.modal').modal('hide');
                        $('#dialog-form #dialog-form-ajax').html('');
                        var linkFw = '#Page=' + getParameters("Page", 1) + '&RowPerPage=' + getParameters("RowPerPage", 10);
                        createCloseMessage("Thông báo", data.Message, linkFw + '&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + '');
                    }
                });
            }
        });
    })
</script>
<form id="frm-ContentVote">
    <div class="modal-body">
        <input type="hidden" name="AgencyID" id="AgencyID" value="@ViewBag.AgencyID" />
        <input type="hidden" name="TreeID" id="TreeID" value="@ViewBag.ArrId" />
        <input type="hidden" name="UserID" id="UserID" value="@ViewBag.GuiId" />
        <input type="hidden" name="do" id="do" value="Order" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thông tin tiêu chí đánh giá
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tiêu chí</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="VoteID" name="VoteID">
                                    @foreach (var item in Model)
                                    {
                                        <option value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Giá trị</label>
                            <div class="col-sm-10">
                                <input type="text" id="Value" name="Value" class="form-control"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nội dung</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="Content" name="Content"></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="close" type="button" data-dismiss="modal" class="btn btn-sm btn-default">Đóng</button>
    </div>
</form>