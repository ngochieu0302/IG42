@using FDI.CORE
@model FDI.Simple.ModelDNMailSSCItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles"><input value="" type="checkbox" /></th>
                     @*   <th class="text-center"><a href="#Field=ID">ID</a></th>*@
                        <th class="text-center">Tiêu đề</th>
                        <th class="text-center">Ngày gửi</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.Title">
                        <td class="act_roles"><input type="checkbox" value="@item.ID" class="check"></td>
                       @* <td>@item.ID</td>*@
                        <td>
                            <a href="#@item.ID" data-event="view">@item.Title</a>
                        </td>
                        <td><a href="#">@item.CreateDate.DecimalToString("dd/MM/yyyy HH:mm")</a></td>
                        <td class="text-right" style="width: 12%">
                            @Grid.ActionView(item.ID, item.Title)
                            @Grid.ActionEdit(item.ID, item.Title)
                            @Grid.ActionDelete(item.ID, item.Title)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>