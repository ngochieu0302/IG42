@using FDI.CORE
@model FDI.Simple.CompanyItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">

    $(function () {
        registerGallery();
        $("#modalForm").validate({
            rules: {
                Name:
                {
                    required: true,
                },

                NumberBank: {
                    required: true,
                },
            },
            messages: {
                Name:
                {
                    required: "Trường bắt buộc nhập."
                },

                NumberBank: {
                    required: "Trường bắt buộc nhập."
                }
            },
            submitHandler: function () {
                PostAction("#modalForm");
            }
        });

    });
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-picture-o"></i>Thông tin công ty
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Tên Công ty</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name" />
                            </div>
                            <label class="col-md-2 control-label">Điện thoại</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" placeholder="..." name="Phone" id="Phone" value="@Model.Phone" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Địa chỉ</label>
                            <div class="col-md-10">
                                <input type="text" name="Address" id="Address" value="@Model.Address" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">TaxCode</label>
                            <div class="col-md-4">
                                <input type="text" name="TaxCode" id="TaxCode" value="@Model.TaxCode" class="form-control" />
                            </div>
                            <label class="col-md-2 control-label">Người đại diện</label>
                            <div class="col-md-4">
                                <input type="text" name="NameRepresent" id="NameRepresent" value="@Model.NameRepresent" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Ngân hàng</label>
                            <div class="col-md-4">
                                <input type="text" name="Bank" id="Bank" value="@Model.Bank" class="form-control" />
                            </div>
                            <label class="col-md-2 control-label">Số tài khoản</label>
                            <div class="col-md-4">
                                <input type="text" name="NumberBank" id="NumberBank" value="@Model.NumberBank" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>

