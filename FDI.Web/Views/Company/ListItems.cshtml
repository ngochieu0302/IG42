@using FDI.CORE
@model FDI.Simple.ModelCompanyItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th class="text-center"><a href="#Field=ID">ID</a></th>
                        <th class="text-center"><a href="#Field=Name">Tên Công ty</a></th>
                        <th class="text-center">Địa chỉ</th>
                        <th class="text-center">TaxCode</th>
                        <th class="text-center">Người đại diện</th>
                        <th class="text-center">Số tài khoản</th>
                        <th class="text-center">Ngân hàng</th>
                        <th class="text-center">Ngày tạo</th>
                        <th class="text-center">Người tạo</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>

                @foreach (var item in Model.ListItems)
                {
            <tr title="@item.Name">
                <td class="act_roles">
                    <input type="checkbox" value="@item.ID" class="check">
                </td>
                <td class="text-center">@item.ID</td>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.TaxCode</td>
                <td>@item.NameRepresent</td>
                <td>@item.NumberBank</td>
                <td>@item.Bank</td>
                <td>@item.DateCreate.DecimalToString("dd/MM/yyyy hh:mm")</td>
                <td>@item.UserName</td>
                <td class="text-right">
                    
                    @*@Grid.ActionView(item.ID, item.Name)*@
                    @Grid.ActionEdit(item.ID, item.Name)
                    @Grid.ActionDelete(item.ID, item.Name)
                </td>
            </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>