@model FDI.Simple.ModelDNRoomItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
             @if (Model.ListItems != null)
             {
                 <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                     <colgroup>
                         <col class="colgroup check" />
                         <col class="colgroup indentity" />
                         <col />
                         <col class="colgroup custommer" />
                         <col class="colgroup price" />
                         <col class="colgroup price" />
                         <col class="colgroup price" />
                         <col class="colgroup action-3" />
                     </colgroup>
                     <thead>
                         <tr>
                             <th class="act_roles">
                                 <input value="" type="checkbox"/>
                             </th>
                             <th class="text-center"><a href="#Field=ID">ID</a></th>
                             <th><a href="#Field=Name">Số phòng</a></th>
                             <th ><a href="#Field=CustomerName">Tầng</a></th>
                             <th class="text-center"><a href="#Field=Row">Cột</a></th>
                             <th class="text-center"><a href="#Field=Column">Hàng</a></th>
                             <th><a href="#Field=Soft">Thứ tự</a></th>

                             <th class="text-center">Thao tác</th>
                         </tr>
                     </thead>
                     <tbody>
                         @if (Model.ListItems != null)
                         {
                             foreach (var item in Model.ListItems)
                             {
                                 <tr data-id="@item.ID">
                                     <td class="act_roles">
                                         <input type="checkbox" value="@item.ID" class="check">
                                     </td>
                                     <td class="text-center">@item.ID</td>
                                     <td>@item.Name</td>
                                     <td>@item.DN_Level.Name</td>
                                     <td class="text-center">@item.Row</td>
                                     <td class="text-center">@item.Column</td>
                                     <td class="text-center">@item.Sort</td>
                                     @*<td class="text-center">@Grid.ActionShow(item.ID, item.Name, item.IsShow)</td>*@
                                     <td class="text-right">
                                         @Grid.ActionView(item.ID, item.Name)
                                         @Grid.ActionEdit(item.ID, item.Name)
                                         @Grid.ActionDelete(item.ID, item.Name)
                                     </td>
                                 </tr>
                             }
                         }
                     </tbody>
                 </table>
             }
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>