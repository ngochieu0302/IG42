@using FDI.CORE
@model FDI.Simple.ModelDNRequestWareHouseItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>:
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th class="text-center"><a href="#Field=ID">ID</a></th>
                        <th class="text-center">Tên sản phẩm</th>
                        <th class="text-center">Ngày giao hàng
                        </th>
                        <th class="text-center">Giờ giao hàng
                        </th>
                        <th class="text-center">Số lượng</th>
                    </tr>
                </thead>

                @foreach (var item in Model.ListItems)
                {
                    <tr title="@item.ProductName">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td class="text-center">@item.ID</td>
                        <td>@item.ProductName</td>
                        <td>@item.Today.DecimalToString("dd/MM/yyyy")</td>
                        <td>
                            @foreach (var hour in TypeHours.Hours().Where(hour => hour.Value == item.Hours))
                            {
                                <span>@hour.Key</span>
                            }
                        </td>
                        <td>@item.QuantityActive.Quantity()</td>
                       
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
