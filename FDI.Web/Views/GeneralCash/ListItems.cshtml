@using FDI.CORE
@model List<FDI.Simple.CashAdvanceItem>
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var stt = 1;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col />
                    <col />
                    <col class="colgroup size"/>
                    <col class="colgroup size" />
                    <col class="colgroup size" />
                   
                </colgroup>
                <thead>
                <tr>
                    <th>STT</th>
                    <th><a href="#Field=CostName">Tên nhân viên</a></th>
                    <th><a href="#Field=UserCreate">Tên đăng nhập</a></th>
                    <th class="text-right"><a href="#Field=UserName">Tổng ứng</a></th>
                    <th class="text-right"><a href="#Field=PaymentMethodId">Tổng trả</a></th>
                    <th style="text-align:right !important">Còn lại</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.OrderByDescending(m => Math.Abs((m.TotalCash ?? 0) - (m.TotalRepay ?? 0))))
                {
                    <tr>
                        <td>@(stt++)</td>
                        <td>@item.Name</td>
                        <td>@item.UserName</td>
                        <td class="text-right">@item.TotalCash.Money()</td>
                        <td class="text-right">@item.TotalRepay.Money()</td>
                        <td class="text-right">@(((item.TotalCash ?? 0) - (item.TotalRepay ?? 0)).Money())</td>
                    </tr>
                }
                </tbody>
                <thead>
                <tr>
                    <td colspan="3"><b>TỔNG</b></td>
                    <td class="text-right" style="color:red"><b>@Model.Sum(c => c.TotalCash).Money()</b></td>
                    <td class="text-right" style="color:red"><b>@Model.Sum(c => c.TotalRepay).Money()</b></td>
                    <td class="text-right" style="color:red"><b>@((Model.Sum(c => c.TotalCash ?? 0) - Model.Sum(c => c.TotalRepay ?? 0)).Money())</b></td>
                </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');       
    });
</script>
