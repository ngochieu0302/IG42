@using FDI.CORE
@model FDI.Base.Shop_Product_Comingsoon
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#modalForm").validate({
            rules: {
                Quantity: { required: true },
                QuantityOut: { required: true },
                Price: { required: true },

            },
            messages: {
                Quantity: { required: "Trường này bắt buộc" },
                QuantityOut: { required: "Trường này bắt buộc" },
                Price: { required: "Trường này bắt buộc" },

            },
            submitHandler: function () { //onSubmit
                $('.maskPrice').each(function (i) {
                    $(this).val($(this).val().replace(/\,/g, ''));
                });
                PostAction("#modalForm");
            }
        });

    });
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gear"></i>Thông tin về sản phẩm
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Số lượng</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="..." name="Quantity" id="Quantity" value="@Model.Quantity" />
                            </div>
                            <label class="col-sm-2 control-label">Số lượng</label>
                            <div class="col-sm-4">
                                <input type="text" class="form-control" placeholder="..." name="QuantityOut" id="QuantityOut" value="@Model.QuantityOut" />
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Giá bán</label>
                            <div class="col-sm-4">
                                <input type="text" name="Price" id="Price" value="@(Model.Price ?? 0)" class="form-control maskPrice" />
                            </div>
                            <label class="col-sm-2 control-label">Ngày dự kiến</label>
                            <div class="col-sm-4">
                                <input type="date" name="_DateEx" value="@(Model.DateEx.DecimalToString("yyyy-MM-dd"))" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">Cấp nhật</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>