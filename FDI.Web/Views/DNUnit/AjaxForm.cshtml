@model FDI.Simple.DNUnitItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script>
    $(document).ready(function () {
        $("#modalForm").validate({
            rules: {
                Name: {
                    required: true,
                    remote: "@Url.Action("CheckByName", "DNUnit", new { id = Model.ID })"
                },
            },
            messages: {
                Name:
                {
                    required: "Trường này bắt buộc nhập.",
                    remote: "Tên đơn vị này đã tồn tại, Xin mời nhập tên khác."
                }
            },
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });
    });
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <input type="hidden" id="AgencyId" name="AgencyId" value="@ViewBag.AgencyId" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thêm mới đơn vị
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên đơn vị</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="close" type="button" data-dismiss="modal" class="btn btn-sm btn-default">Đóng</button>
    </div>
</form>