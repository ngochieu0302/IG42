@using FDI.CORE
@model FDI.Simple.ContactOrderItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var stt = 1;
}
<div class="modal-body">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-newspaper-o"></i>Thông tin đặt hàng
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <tr>
                        <td style="width: 15%">
                            <label>Khách hàng</label>
                        </td>
                        <td>
                            @Model.CustomerName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Số đt</label>
                        </td>
                        <td>
                            @Model.CutomerPhone
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Địa chỉ</label>
                        </td>
                        <td>
                            @Model.CutomerAddress
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Thời gian bắt đầu</label>
                        </td>
                        <td>
                            @Model.StartDate.DecimalToString("dd/MM/yyyy HH:mm")
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Thời gian kết thúc</label>
                        </td>
                        <td>
                            @Model.EndDate.DecimalToString("dd/MM/yyyy HH:mm")
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Vị trí</label>
                        </td>
                        <td>
                            @String.Join(",", Model.DN_Bed_Desk1.Select(m => m.Name))
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Ghi chú</label>
                        </td>
                        <td>
                            @Model.Note
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Tiền đặt</label>
                        </td>
                        <td>
                            @Model.Discount.Money()
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
</div>
