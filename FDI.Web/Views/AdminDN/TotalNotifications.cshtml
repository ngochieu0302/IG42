@model List<FDI.Simple.StorageFreightWarehouseItemNew>
@using FDI.CORE
@using FDI.Utils
<li class="dropdown dropdown-extended dropdown-inbox" id="header_inbox_bar">
    <a href="javascript:;" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
        <i class="fa fa-envelope-o"></i>
        <span class="badge badge-default">@Model.Count()</span>
    </a>
    <ul class="dropdown-menu">
        <li>
            <ul class="dropdown-menu-list scroller" data-handle-color="#637283">
                <li class="vieworder">
                    @foreach (var item in Model)
                    {
                        <a href="@(item.Url)">
                            <span class="subject">
                                <span class="from">@item.Fullname</span>
                                <span class="time">@Utility.TimeAgo(item.DateCreate.DecimalToDate()) </span>
                            </span>
                            <span class="message">@item.Note</span>
                        </a>
                    }
                </li>
            </ul>
        </li>
    </ul>
</li>
<script src="~/Content/Web/restaurant.js"></script>
@if (Model != null && Model.Any())
{
    <script>
        $(function () {
            var notify;
            notify = new Notification(
                        'Bạn có ' + "@(Model.Count)" + ' thông báo mới từ hệ thống', // Tiêu đề thông báo
                      {
                          body: 'Yêu cầu nhập kho cần xử lý.', // Nội dung thông báo
                          icon: 'https://freetuts.net/public/logo/icon.png', // Hình ảnh
                          tag: 'https://freetuts.net/' // Đường dẫn 
                      }
              );
            notify.onclick = function () {
                window.location.href = this.tag; // Di chuyển đến trang cho url = tag
            };
            var urlnode = '@WebConfig.UrlNode' + ':4000';
          var userid = $("#useridonline").val();
          var aid = $("#agencyiduser").val();
          var codelogin = $("#codelogin").val();
          Notifycation(urlnode, userid, aid, codelogin);
        });
    </script>
}
