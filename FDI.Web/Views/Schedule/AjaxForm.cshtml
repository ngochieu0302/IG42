@model FDI.Simple.ScheduleItem
@{
 
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        callSelect2("#HoursStart", "80px");
        callSelect2("#MinuteStart", "80px");
        callSelect2("#HoursEnd", "80px");
        callSelect2("#MinuteEnd", "80px");
        $("#modalForm").validate({
            rules: {
                Name: { required: true },
                HoursStart: { required: true },
                MinuteStart: { required: true },
                HoursEnd: { required: true },
                MinuteEnd: { required: true }
            },
            messages: {
                Name: "Mời bạn nhập tên ca làm việc.",
                HoursStart: "Chọn thời gian bắt đầu ca làm việc",
                MinuteStart: "Chọn thời gian bắt đầu ca làm việc",
                HoursEnd: "Chọn thời gian kết thúc ca",
                MinuteEnd: "Chọn thời gian kết thúc ca",
            },
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });
    });
</script>

<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gear"></i>Thông tin về ca làm việc
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên ca làm việc</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Giờ đến</label>
                            <div class="col-sm-10">
                                <select name="HoursStart" id="HoursStart" class="select2">
                                    @for (int i = 0; i <= 23; i++)
                                    {
                                        <option value="@i" @(Model.HoursStart == i ? "selected" : string.Empty)>@i</option>
                                    }
                                </select>

                                <select name="MinuteStart" id="MinuteStart" class="select2">
                                    @for (int i = 0; i <= 59; i++)
                                    {
                                        <option value="@i" @(Model.MinuteStart == i ? "selected" : string.Empty)>@i</option>
                                    }
                                </select>
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-2 control-label">Giờ nghỉ</label>
                            <div class="col-sm-10">
                                <select name="HoursEnd" id="HoursEnd" class="select2">
                                    @for (int i = 0; i <= 23; i++)
                                    {
                                        <option value="@i" @(Model.HoursEnd == i ? "selected" : string.Empty)>@i</option>
                                    }
                                </select>

                                <select name="MinuteEnd" id="MinuteEnd" class="select2">
                                    @for (int i = 0; i <= 59; i++)
                                    {
                                        <option value="@i" @(Model.MinuteEnd == i ? "selected" : string.Empty)>@i</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox col-md-6">
                                    <label>
                                        @Html.CheckBox("IsShow") Hiện thị
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-primary">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>
