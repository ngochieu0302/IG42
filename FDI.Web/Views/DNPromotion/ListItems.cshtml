@using FDI.CORE
@model FDI.Simple.ModelDNPromotionItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
               <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll" />
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID</a></th>
                    <th><a href="#Field=Name">Tên khuyến mãi</a></th>
                    <th><a href="#Field=DateStart">Ngày Bắt đầu</a></th>
                    <th><a href="#Field=DateEnd">Ngày Kết thúc</a></th>
                    <th><a href="#Field=Note">Sản phẩm KM</a></th>
                    <th><a href="#Field=Quantity">Số lượng</a></th>
                    <th><a href="#Field=IsAgency">Tất cả cửa hàng</a></th>
                    <th><a href="#Field=IsEnd">Trạng thái</a></th>
                    <th><a href="#Field=Username">Người tạo</a></th>
                    <th class="text-right">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.ListItems)
                {
                    <tr data-id="@item.ID" title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td class="text-center">@item.ID</td>
                        <td class="text-center">@Grid.DisplayShowStrike(item.Name, item.IsEnd == false)</td>
                        <td class="text-center">@item.DateStart.DecimalToString("dd/MM/yyyy")</td>
                        <td class="text-center">@item.DateEnd.DecimalToString("dd/MM/yyyy")</td>
                        <td>@item.Note</td>
                        <td class="text-center">@item.Quantity</td>
                        <td class="text-center">@Grid.DisplayShow(item.Name,item.IsAgency)</td>
                        <td class="text-center">@(item.IsEnd == true ? "Đã kết thúc" : "Đang hoạt động")</td>
                        <td class="text-center">@item.Username</td>
                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.Name)
                            @if (item.IsEnd == false)
                            {
                                <a data-id="@item.ID" class="btn btn-sm btn-default btn_Inport" data-action="Edit"><i class="fa fa-pencil-square-o" style="color: #04A827;"></i></a>
                                @Grid.ActionDelete(item.ID, item.Name)
                            }

                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
        $(".btn_Inport").click(function () {
            var id = $(this).attr("data-id");
            var action = $(this).attr("data-action");
            FdiOpenDialog("#dialog-form-4", urlForm + "?ItemId=" + id + "&do=" + action, "Chỉnh sửa khuyến mãi");
        });
    });
</script>
