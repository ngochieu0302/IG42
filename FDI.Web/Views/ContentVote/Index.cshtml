@using FDI.CORE
@model FDI.Simple.ModelContentVoteItem
@{
    Layout = "~/Views/Shared/_Meta.cshtml";
    var date = DateTime.Now;
}
<script type="text/javascript">   
    $(document).ready(function () {   
        $(".select2").select2({          
            maximumSelectionLeng: 1
        });
    });
</script>
<div class="header-control">    
    <h3 class="page-title"></h3>
    <div class="group-form-control">
        <form id="gridSearch" class="form-inline" role="form">
            <div class="form-group">
                <select name="DateMonth" id="DateMonth" class="form-control">
                    @for (var i = 1; i <= 12; i++)
            {
                <option value="@i" @(i == date.Month ? "selected" : "")>Tháng @i</option>
    }
                </select>
            </div>
            <div class="form-group">
                <select name="DateYear" id="DateYear" class="form-control">
                    @for (var i = 2017; i <= (date.Year); i++)
            {
                <option value="@i" @(i == date.Year ? "selected" : "")>Năm @i</option>
    }
                </select>
            </div>
            <div class="form-group">
                <select name="vote" id="vote" class="form-control select2">
                    <option value="">-- Tiêu chí --</option>
                    @foreach (var item in Model.VoteItems)
            {
                <option value="@item.ID" title="@item.Name">@item.Name.SubString(30)</option>
    }
                </select>
            </div>
            <div class="form-group">
                <select name="user" id="user" class="form-control select2">
                    <option value="">-- Nhân viên --</option>
                    @foreach (var item in Model.UserItems)
            {
                <option value="@item.UserName">@item.UserName</option>
    }
                </select>
            </div>
            <div class="form-group">
                <select name="view" id="view" class="form-control">
                    <option value="">-- Tất cả --</option>
                    <option value="0">NV đánh giá</option>
                    <option value="1">NV bị đánh giá</option>
                </select>
            </div>
            <button name="submit.Search" type="submit" class="btn btn-sm btn-primary"><span class="fa fa-search"></span>Tìm kiếm</button>
            <button name="submit" type="submit" id="btn_ExportExcel" class="btn btn-sm btn-primary"><span class="fa fa-search"></span>Xuất Excel</button>
        </form>
    </div>
</div>
<script>
    $(document).ready(function () {
        var urlXuatExcel = '@Url.Action("ExportExcel", "ContentVote")';
        $("#btn_ExportExcel").click(function () {
            var form = $("#gridSearch");
            window.location.href = urlXuatExcel + '?' + getValueFormMutilSelect(form);
            return false;
        });
    });
</script>