@model FDI.Web.LogOnModel
@{
    Layout = "~/Views/Shared/_LayoutAnonymous.cshtml";
}
<!-- BEGIN LOGO -->

<div class="logo">
    <a href="/">
        @Html.Action("Logo", "Account")
    </a>
</div>
<div class="content">
    <!-- BEGIN LOGIN FORM -->
    <h3 class="form-title">ĐĂNG NHẬP<small>Hệ thống</small></h3>
    @using (Html.BeginForm((string)ViewBag.FormAction, "Account", FormMethod.Post))
            {
        <input type="hidden" id="itemUrl" name="itemUrl" value="@ViewBag.url" />
        @Html.ValidationSummary(true, "Đăng nhập không thành công, Xin vui lòng thử lại ...", new { @class = "alert alert-danger" })
        <div class="form-group">
            <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
            <label class="control-label visible-ie8 visible-ie9">Username</label>
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control form-control-solid placeholder-no-fix", @placeholder = "Username", @name = "username" })

        </div>
        <div class="form-group">
            <label class="control-label visible-ie8 visible-ie9">Password</label>
            @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-solid placeholder-no-fix", @placeholder = "Password", @name = "password" })

        </div>
        <div class="form-group">
            <label class="rememberme check">
                @Html.CheckBoxFor(m => m.RememberMe, new { @name = "remember" }) Ghi nhớ
            </label>
            <button type="submit" class="btn green uppercaset fr">Đăng nhập</button>
        </div>

    }
    <!-- END LOGIN FORM -->
</div>
@Html.Action("Content", "Account")
<!-- footer -->
