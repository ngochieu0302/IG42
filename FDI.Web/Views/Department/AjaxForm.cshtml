@model FDI.Simple.DepartmentItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#modalForm").validate({
            rules: {
                Name: { required: true }               
            },
            messages: {
                Name: "Nhập tên chức vụ."                
            },
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });
       
    });
</script>

<form id="modalForm">
    <div class="modal-body">
    <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID"/>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gear"></i>Thông tin về chức vụ
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-horizontal">
             
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tên chức vụ</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Thứ tự hiện thị</label>
                        <div class="col-sm-10">
                            <input type="number" name="Sort" id="Sort" value="@Model.Sort" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Mô tả</label>
                        <div class="col-sm-10">
                            <textarea rows="8" id="Description" name="Description" class="form-control">@Model.Description                           </textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <div class="checkbox col-md-6">
                                <label>
                                    @Html.CheckBox("IsShow") Hiện thị
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>

    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>        
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>
