@using FDI.CORE
@model FDI.Simple.ModelDebtItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var stt = 1;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup color" />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
        
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" /></th>
                        <th class="text-center">STT</th>
                        <th><a href="#Field=DateCreated">Ngày tạo</a></th>
                        <th><a href="#Field=UserNameCashier">Người Chuyển</a></th>
                        <th><a href="#Field=UserName">Người Nhận</a></th>
                        <th class="text-right"><a href="#Field=Price">Số tiền</a></th>
                        <th><a href="#Field=Note">Nội dung</a></th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.ListItem != null)
                    {
                        foreach (var item in Model.ListItem)
                        {
                        <tr data-id="@item.ID" title="@item.SupplieName">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td class="text-center">@(stt++)</td>
                            <td>@item.DateCreated.DecimalToString("dd/MM/yyyy HH:mm")</td>                            
                            <td>@item.UserName</td>
                            <td>@item.SupplieName</td>
                            <td class="text-right">@item.Price.Money()</td>                            
                            <td>@item.Note</td>                            
                            <td>
                                @Grid.ActionView(item.ID, item.SupplieName)
                                @if ( Model.IsAdmin)
                                {
                                    @Grid.ActionEdit(item.ID, item.SupplieName)
                                    @Grid.ActionDelete(item.ID, item.SupplieName, item.IsDeleted)
                                }
                            </td>
                        </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
        var total = '@Model.TotalPrice';
        $('.bottom-pager').append('<span class="footer-control-view">Tổng : <i class="maskPrice">' + total + ' - </i></span>');
    });
</script>
