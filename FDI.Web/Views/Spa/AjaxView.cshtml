@using FDI.Simple
@using FDI.CORE
@model FDI.Simple.ModelOrderGetItem
@{
    var day = DateTime.Today;
    var tday = ConvertDate.TotalSeconds(day);
    var date = DateTime.Now.AddMinutes(5);
    var lstproduct = new List<ProductItem>(ViewBag.lstproduct);
}
<script>
    $(function () {
        var d = '@day.ToString("dd/MM/yyyy")';
        var td = parseInt('@tday');
        var lists = JSON.parse($("#listbed").val());
        var totalPrice = 0;
        var listbedid = [];
        var price = 0;
        var text = "";
        debugger;
        $("#listbed").val("");
        //$('.timeall').html(h + ":" + m + " " + d);
        var count = lists.length;
                @*var idp = parseInt($("#PacketItem").find(":selected").data("id"));
        var price = parseInt($("#PacketItem").find(":selected").data("price"));;
        var isearly = $("#PacketItem").find(":selected").data("early");
        if (idp == 0) {
            idp = listp.ID;
            price = parseInt('@price');
            isearly = listp.IsEarly;
        }*@

        for (var i = 0; i < count; i++) {
            text = text + "<li id='obj-" + lists[i].ID + "'><span> " + lists[i].Name + " " + lists[i].RoomName + "</span> <a class=\"btn btn-default bdelete\" data-pid='" + lists[i].ID + "'><i class=\"fa fa-times\" style=\"color: red;\"></i></a></li>";
        }
        $(".listb").html(text);
        $("body").on("click", ".bdelete", function () {
            var id = parseInt($(this).data("pid"));
            if (lists.length > 1) {
                for (i = 0; i < lists.length; i++) {
                    if (lists[i].ID == id) {
                        lists.splice(i, 1);
                        $("#obj-" + id).hide();
                        break;
                    }
                }
            } else {
                alert("Đơn hàng phải lớn hơn 1 giường");
            }
            $("#Price").val(price * lists.length);
        });
        $('#Customer').autocomplete({
            serviceUrl: "/BookATable/AutoCustomer",
            minChars: 1,
            delimiter: /(;)\s*/,
            maxHeight: 400,
            onSelect: function (el) {
                $('#CustomerID').val(el.ID);
                $('#CustomerName').val(el.title);
                $('#Mobile').val(el.phone);
                $('#Address').val(el.code);
                $('#printKH').html(el.title);
                $('#Customer').val("");
            }
        });
        callSelect2("#MinuteStartAll", "60px");
        callSelect2("#HoursStartAll", "60px");
        callSelect2("#LstProductID", "100%");
        $('#LstProductID').on('change', function () {
            var priceproduct = 0;
            var time = 0;
            $('#LstProductID').find(":selected").each(function () {
                priceproduct += parseInt($(this).data("price"));
                var tg = $(this).data("val");
                time += parseInt(tg);
                $("#ProductID").val($(this).val());
            });
            totalPrice = priceproduct;
            //$("#SetPacketOrder").html(time);
            $(".productall").html(time + "'");
            $("#Price").val(priceproduct * count);
            $("#Value").val(time);
            price = priceproduct;
        });
        $("#frm-modal").validate({
            rules: {
                CustomerName:
                {
                    required: true,
                },
                LstProductID:
                {
                    required: true,
                }
            },
            submitHandler: function () { //onSubmit
                $("#btnSave").prop('disabled', true);
                $('.maskPrice').each(function (i) {
                    $(this).val($(this).val().replace(/\,/g, ''));
                });
                var h = $("#HoursStartAll").val();
                var m = $("#MinuteStartAll").val();
                td = td + parseInt(h) * 3600 + parseInt(m) * 60;
                $("#StartDate").val(td);
                var v = $("#Value").val();
                $("#EndDate").val(td + v * 60);
                for (i = 0; i < lists.length; i++) {
                    listbedid.push(lists[i].ID);
                }
                $("#itemId").val(listbedid.join(", "));
                $.post(urlPostAction, $("#frm-modal").serialize(), function (data) {
                    $("#btnSave").prop('disabled', false);
                    if (data.Erros)
                        toastr["error"](data.Message);
                    else {
                        createShowMessage("Thông báo", data.Message); // Tạo thông báo khi click đóng thì chuyển đến url đích
                        //Print();
                        $("#dialog-form").modal('hide'); //Đóng form thêm mới - sửa
                    }

                });
            }
        });

    });
</script>
<form id="frm-modal">
    <div class="modal-body">
        <input type="hidden" name="itemId" id="itemId" value="" />
        <input type="hidden" name="do" id="do" value="Add" />
        <input type="hidden" name="ProductID" id="ProductID" value="" />
        <input type="hidden" name="StartDate" id="StartDate" value="" />
        <input type="hidden" name="EndDate" id="EndDate" value="" />
        <input type="hidden" name="Value" id="Value" value="" />
        <input type="hidden" name="IsEarly" id="IsEarly" value="" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thanh toán
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-md-2 control-label">Khách hàng</label>
                            <div class="col-md-10">
                                <input class="form-control" id="Customer" name="Customer" value="">
                                <input type="hidden" id="CustomerID" name="CustomerID" value="">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Họ Tên</label>
                            <div class="col-md-10">
                                <input class="form-control" id="CustomerName" name="CustomerName" value="@Model.CustomerName">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Địa chỉ</label>
                            <div class="col-md-10">
                                <input class="form-control" id="Address" name="Address" value="@Model.Address">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Số điện thoại</label>
                            <div class="col-md-10">
                                <input class="form-control" id="Mobile" name="Mobile" value="@Model.Mobile">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Thời gian</label>
                            <div class="col-sm-10">
                                <select name="HoursStartAll" id="HoursStartAll" class="select2">
                                    @for (int i = date.Hour; i <= 23; i++)
                                    {
                                        <option value="@i" >@i</option>
                                    }
                                </select>
                                <select name="MinuteStartAll" id="MinuteStartAll" class="select2">
                                    @for (int i = 0; i <= 59; i++)
                                    {
                                        <option value="@i" @(date.Minute == i ? "selected" : string.Empty)>@i</option>
                                    }
                                </select>
                            </div>
                            @*<label class="col-md-2 control-label">Thời gian</label>
                            <div class="col-md-5 timeall" id="SetDateOrder">
                            </div>*@
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Chọn sản phẩm</label>
                            <div class="col-sm-10">
                                <select name="LstProductID" id="LstProductID" multiple class="select2">
                                    @foreach (var item in lstproduct)
                                    {
                                        <option value="@item.ID" data-price="@item.PriceNew" data-val="@item.Value">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group product">
                            <label class="col-md-2 control-label">Gói</label>
                            <div class="col-md-5 productall">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Danh sách giường</label>
                            <div class="col-md-10">
                                <ul class="listb">
                                </ul>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Ghi chú</label>
                            <div class="col-md-10">
                                <textarea class="form-control" id="Note" name="Note" rows="3"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Giá tiền</label>
                            <div class="col-md-10">
                                <input class="form-control maskPrice" id="Price" name="Price" value="">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">Lưu lại</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-info">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-default" data-dismiss="modal">Đóng</button>
    </div>
</form>

