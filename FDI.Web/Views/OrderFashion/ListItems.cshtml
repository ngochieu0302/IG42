@using FDI.CORE
@model FDI.Simple.ModelOrderItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var stt = 1;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col class="colgroup indentity" />
                    <col />
                    <col class="colgroup salarry" />
                    <col class="colgroup price" />
                    <col class="colgroup price" />
                    <col class="colgroup price" />
                    <col class="colgroup price" />
                    <col class="colgroup action" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll"/>
                    </th>
                    <th class="text-center">STT</th>
                    <th class="text-center"><a href="#Field=ID">Số HD</a></th>
                    <th><a href="#Field=CustomerName">Khách hàng</a></th>
                    <th class="text-center"><a href="#Field=CutomerPhone">Điện thoại</a></th>
                    <th class="text-center"><a href="#Field=StartDate">Ngày bán</a></th>
                    <th class="text-center"><a href="#Field=StartDate">Ngày nhận</a></th>
                    <th class="text-right"><a href="#Field=TotalPrice">Tổng tiền</a></th>
                    <th class="text-center"><a href="#Field=UserCreate">Thu ngân</a></th>
                    <th>Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @if (Model.ListOrderItem != null)
                {
                    foreach (var item in Model.ListOrderItem)
                    {
                        <tr data-id="@item.ID">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td class="text-center">@(stt++)</td>
                            <td class="text-center">@item.ID</td>
                            <td>@(item.CustomerName ?? "(Khách lẻ)")</td>
                            <td class="text-center">@item.CutomerPhone</td>
                            <td class="text-center">@item.StartDate.DecimalToString("dd/MM/yyyy")</td>
                            <td class="text-center">@item.EndDate.DecimalToString("dd/MM/yyyy")</td>
                            <td class="text-right">@string.Format("{0:0,0}", item.TotalPrice)</td>
                            <td class="text-center">@item.UserName</td>
                            
                            <td>
                                @Grid.ActionView(item.ID, item.CustomerName)
                                @Grid.ActionEdit(item.ID, item.CustomerName)
                                @*@Grid.ActionDelete(item.ID, item.CustomerName)*@
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
