@model FDI.Simple.ModelDiscountItem
@using FDI.CORE
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var lstInt = Model.DiscountItem.ListInt != null ? Model.DiscountItem.ListInt.ToList() : new List<int>();
}
<script>
    $(document).ready(function () {
        callSelect2(".SupplierID", "100%");
        $("#modalForm").validate({
            rules: {
                Percent: { required: true },
                DateStart_: { required: true },
                PriceS: { required: true },
                PriceE: { required: true },
                DateEnd_: { required: true },
            },
            messages: {
                Percent: { required: "Trường này là bắt buộc." },
                DateStart_: { required: "Trường này là bắt buộc." },
                PriceS: { required: "Trường này là bắt buộc." },
                PriceE: { required: "Trường này là bắt buộc." },
                DateEnd_: { required: "Trường này là bắt buộc." },
            },
            submitHandler: function () { //onSubmit
                $('.maskPrice').each(function (i) {
                    $(this).val($(this).val().replace(/\,/g, ''));
                });
                PostAction("#modalForm");
            }
        });
    });
</script>
