@model FDI.Simple.ModelAssetsItem
    @using FDI.CORE;
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var i = 1;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />                   
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll" />
                    </th>
                    <th><a href="#Field=Name">STT</a></th>
                    <th><a href="#Field=Name">Mã tài sản</a></th>
                    <th><a href="#Field=Name">Tên tài sản</a></th>
                    <th><a href="#Field=UnitName">Ngày mua</a></th>
                    <th><a href="#Field=QuantityDay">Ngày hết BH</a></th>
                    <th><a href="#Field=Price">Ngày thanh lý</a></th>
                    <th><a href="#Field=Name">Serial</a></th>
                    <th><a href="#Field=Name">Giá trị</a></th>
                    <th><a href="#Field=Name">Khấu hao</a></th>
                    <th>Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.ListItems)
                {
                    <tr data-id="@item.ID" title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td>@(i++)</td>
                        <td>@item.Code</td>
                        <td>@item.Name</td>
                        <td>@item.DateBuy.DecimalToString("dd/MM/yyyy")</td>
                        <td>@item.DateGuarantee.DecimalToString("dd/MM/yyyy")</td>
                        <td>@item.DateLiquidation.DecimalToString("dd/MM/yyyy")</td>
                        <td>@item.Serial</td>
                        <td>@item.Price.Money()</td>
                        <td>@item.Depreciation</td>
                        <td>
                            @Grid.ActionView(item.ID, item.Name)
                            @Grid.ActionEdit(item.ID, item.Name)
                            @Grid.ActionDelete(item.ID, item.Name)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
