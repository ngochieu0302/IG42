@model FDI.Simple.ModelBedDeskItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col />
                    <col class="colgroup size" />
                    <col class="colgroup price"/>
                    <col class="colgroup price"/>
                    <col class="colgroup price" />
                    <col class="colgroup action" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox"/>
                    </th>
                    <th><a href="#Field=ID">ID</a></th>
                    <th><a href="#Field=Name">Tên</a></th>
                    <th><a href="#Field=RoomName">Vị trí</a></th>
                    <th><a href="#Field=Code">Phòng</a></th>
                    <th><a href="#Field=PacketName">Gói</a></th>
                    <th><a href="#Field=Quantity">Số lượng</a></th>

                    <th class="text-right">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.ListItem)
                {
                    <tr data-id="@item.ID" title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td>@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.LevelName</td>
                        <td>@item.RoomName</td>
                        <td>@item.PacketName</td>
                        <td>@item.Quantity</td>
                        <td class="text-right">
                            @Grid.ActionEdit(item.ID, item.Name)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
