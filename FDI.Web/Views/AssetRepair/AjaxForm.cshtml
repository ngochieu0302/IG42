@using FDI.Simple
@model FDI.Simple.AssetRepairItem
@{

    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script>
    $(function () {
        $("#modalForm").validate({
            rules: {
                Name: {
                    required: true
                },
                DateRepair_: {
                    required: true
                }
            },
            messages: {
                Name: {
                    required: "Bạn chưa chọn tài sản.",
                },
                DateRepair_: {
                    required: "Bạn chưa chọn tài sản.",
                }
            },
            submitHandler: function () {
                $('.maskPrice').each(function (i) {
                    $(this).val($(this).val().replace(/\,/g, ''));
                });
                PostAction("#modalForm");
            }
        });

        $('#AssetAuto').autocomplete({
            serviceUrl: "/AssetRepair/AutoAsset",
            minChars: 1,
            delimiter: /(;)\s*/,
            maxHeight: 400,
            onSelect: function (el) {
                $("#AssetID").val(el.ID)
            }
        });
    })
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thông tin sửa chữa tài sản
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label"></label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="Nhập mã hoặc tên nguyên liệu" id="AssetAuto" value="" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên Nguyên liệu</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" readonly id="AssetName" value="@Model.AssetName" />
                                <input type="hidden" id="AssetID" name="AssetID" value="@Model.AssetID" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mô tả</label>
                            <div class="col-sm-10">
                                <textarea type="text" class="form-control" name="AssetName" id="AssetName">@Model.Description</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Giá sửa</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control maskPrice" name="Price" id="Price" value="@Model.Price" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên Nguyên liệu</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control" name="DateRepair_" id="DateRepair_" value="@Model.DateRepair" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="close" type="button" data-dismiss="modal" class="btn btn-sm btn-default">Đóng</button>
    </div>
</form>