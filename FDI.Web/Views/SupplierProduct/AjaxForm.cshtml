@using FDI.CORE
@model FDI.Simple.SupplieProductItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">

    $(function () {
       
        $("#modalForm").validate({
            rules: {
                CateId:
                {
                    required: true,
                },

                Quantity: {
                    required: true,
                },
            },
            messages: {
                CateId:
                {
                    required: "Chọn sản phẩm."
                },

                Quantity: {
                    required: "Nhập số lượng."
                }
            },
            submitHandler: function () {
                PostAction("#modalForm");
            }
        });
       
    });
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <input type="hidden" name="SupplierId" id="SupplierId" value="@Model.SupplierId" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-picture-o"></i>Thông tin về sản phẩm
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Sản phẩm</label>
                            <div class="col-sm-10">
                                <select name="CateId" id="CateId" class="form-control">
                                    <option value="1" data-IsLv="0">-- Chọn chuyên mục cha --</option>
                                    @foreach (var item in ViewBag.lstCate)
                                    {
                                        <option @(item.ID== Model.CateId?"selected":"") value="@item.ID">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-2 control-label">Số lượng</label>
                            <div class="col-md-10">
                                <input type="text" name="Quantity" id="Quantity" value="@Model.Quantity" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>

