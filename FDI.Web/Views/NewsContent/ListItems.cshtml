@using FDI.CORE
@model FDI.Simple.ModelNewsItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles" style="width: 2%;">
                            <input value="" type="checkbox" />
                        </th>
                        <th style="width: 55px;" class="text-center"><a href="#Field=ID">ID</a></th>
                        <th style="width: 40%;" class="text-center">Tiêu đề</th>
                        <th style="width: 10%;" class="text-center">Chuyên mục</th>
                        <th class="text-center">Ngày hiện thị</th>
                        <th class="text-center">Ngày tạo</th>
                        <th class="text-center"><a href="#Field=Show">Hiển thị</a></th>
                        <th style="width: 12%;" class="text-center">Thao tác</th>
                    </tr>
                </thead>
                @if (Model.ListItem != null && Model.ListItem.Any())
                {
                      foreach (var item in Model.ListItem)
                    {
                        <tr title="@item.Title">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td class="text-center">@Grid.DisplayShowStrike(item.ID.ToString(), item.IsShow == false)</td>
                            <td>@Grid.DisplayShowStrike(item.Title, item.IsShow == false)</td>
                            <td class="text-center">
                                @if (item.LstCategoryItems != null && item.LstCategoryItems.Any())
                                {
                                  @Grid.DisplayShowStrike(string.Join(",", item.LstCategoryItems.Select(m=> m.Name)), item.IsShow == false)   
                                }
                            </td>
                            <td class="text-center">@Grid.DisplayShowStrike(Convert.ToDateTime(item.StartDateDisplay).ToString("dd/MM/yyyy HH:ss:mm"), item.IsShow == false)</td>
                            <td class="text-center">@Grid.DisplayShowStrike(Convert.ToDateTime(item.DateCreated).ToString("dd/MM/yyyy HH:ss:mm"), item.IsShow == false)</td>
                            <td class="text-center">@Grid.ActionShow(item.ID, item.Title, item.IsShow)</td>
                            <td class="text-right">
                                @Grid.ActionView(item.ID, item.Title)
                                @Grid.ActionEdit(item.ID, item.Title)
                                @Grid.ActionDelete(item.ID, item.Title)
                            </td>
                        </tr>
                    }
                }
              
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>

