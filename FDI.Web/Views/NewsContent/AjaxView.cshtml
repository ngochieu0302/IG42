@model FDI.Simple.NewsItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div class="modal-body">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-picture-o"></i>Thông tin về tin tức
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <tr>
                        <td style="width: 15%">
                            <label>Tiêu đề</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Title)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="width: 15%">
                            <label>Ảnh đại diện</label>
                        </td>
                        <td>
                             @Gallery.DisplayImage(Model.PictureUrl, 120)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label>Mô tả</label>
                        </td>
                        <td>
                            @Html.Raw(Model.Description)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Ngày hiện thị</label>
                        </td>
                        <td id="type">
                            @Convert.ToDateTime(Model.StartDateDisplay).ToString("dd/MM/yyyy HH:ss:mm")
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Ngày tạo</label>
                        </td>
                        <td>
                            @Convert.ToDateTime(Model.DateCreated).ToString("dd/MM/yyyy HH:ss:mm")
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label>Hiển thị</label>
                        </td>
                        <td>
                            @Grid.DisplayShow(Model.Title, Model.IsShow)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label>Nội dung chi tiết</label>
                        </td>
                        <td>
                            @Html.Raw(Model.Details)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
</div>


