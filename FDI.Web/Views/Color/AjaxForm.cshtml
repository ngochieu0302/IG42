@using FDI.CORE
@model FDI.Simple.ColorItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<link href="/Content/Admin/plugins/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet" />
<script src="/Content/Admin/plugins/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>


<script type="text/javascript">
    $(document).ready(function () {
        $('#Value').colorpicker();
        $("#modalForm").validate({
            rules: {
                Name: { required: true },
                Value: { required: true }
            },
            messages: {
                Name: "Nhập tên màu.",
                Value: "Chọn mã màu."
            },
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });

    });
</script>

<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <input type="hidden" name="AgencyID" id="AgencyID" value="@ViewBag.AgencyId" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gear"></i>Thông tin về màu sắc
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên màu</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mã màu</label>
                            <div class="col-sm-10">
                                <div class="input-group" id="Value">
                                    <span class="input-group-addon"><i></i></span>
                                    <input type="text" value="@Model.Value" class="form-control" name="Value" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox col-md-6">
                                    <label>
                                        @Html.CheckBox("IsShow") Hiện thị
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-primary">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>
