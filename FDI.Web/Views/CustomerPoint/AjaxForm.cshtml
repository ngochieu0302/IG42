@model FDI.Simple.CustomerPointItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script>
    $(document).ready(function () {
        $("#modalForm").validate({
            rules: {
                Name: {
                    required: true
                },
                Point: {
                    required: true
                }
            },
            messages: {
                Name:
                {
                    required: "Trường này bắt buộc nhập."
                },
                Point: {
                    required: "Trường này bắt buộc nhập."
                }
            },
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });
    });
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thêm mới mức độ đánh giá
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mức độ</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control"name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Điểm</label>
                            <div class="col-sm-10">
                                <textarea rows="2" class="form-control" name="Point" id="Point">@Model.Point</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="close" type="button" data-dismiss="modal" class="btn btn-sm btn-default">Đóng</button>
    </div>
</form>