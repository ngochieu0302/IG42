@using FDI.CORE
@model FDI.Simple.ModelReceiptPaymentItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var stt = 1;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup color" />
                    <col class="colgroup date" />
                    <col class="colgroup date" />
                    <col class="colgroup date" />
                    <col  />
                    <col  />
                    <col />
                    <col />
                    <col />
                    <col/>
                    <col class="colgroup date" />
                    <col class="colgroup color" />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" /></th>
                        <th>STT</th>
                        <th><a href="#Field=DateCreate">Ngày tạo</a></th>
                        <th><a href="#Field=DateReturn">Ngày chi</a></th>
                        <th><a href="#Field=Code">Mã phiếu</a></th>
                        <th><a href="#Field=CostName">Loại phiếu</a></th>
                        <th><a href="#Field=CostName">Người chi</a></th>
                        <th><a href="#Field=CostName">Người duyệt</a></th>
                        <th><a href="#Field=Price">Số tiền</a></th>
                        <th><a href="#Field=IsActive">Trạng thái</a></th>
                        <th><a href="#Field=Note">Nội dung</a></th>
                        <th><a href="#Field=DateActive">Ngày duyệt</a></th>
                        <th><a href="#Field=UserID">Phê duyệt</a></th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListItem != null)
                    {
                        foreach (var item in Model.ListItem)
                        {
                        <tr data-id="@item.ID" title="@item.Name">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check"></td>
                            <td>@(stt++)</td>
                            <td>@item.DateCreated.DecimalToString("dd/MM/yyyy")</td>
                            <td>@item.DateReturn.DecimalToString("dd/MM/yyyy")</td>
                            <td>@Grid.DisplayShowStrike(item.Code, item.IsDelete != true) </td>
                            @if (item.CostTypeID != null)
                            {
                                <td>@item.CostTypeName</td>
                            }
                            else
                            {
                                <td>Tự động</td>
                            }
                            <td>@item.FullNameCashier (@item.UserNameCashier)</td>
                            <td>@item.FullNameReceipt (@item.UserName)</td>
                            <td class="text-right">@string.Format("{0:0,0}", item.Price)</td>
                            @if (item.IsDelete == true)
                            {
                                <td>
                                    <label class="label label-danger">Đã xóa</label></td>
                            }
                            else if (item.IsActive == true)
                            {
                                <td>
                                    <label class="label label-success">Đã duyệt</label></td>
                            }
                            else
                            {
                                <td>
                                    <label class="label label-default">Chờ duyệt</label></td>
                            }
                            <td>@item.Note</td>
                            <td>@item.DateActive.DecimalToString("dd/MM/yyyy")</td>
                            <td>
                                @if (item.UserID == Model.UserActive && item.IsDelete == false && item.IsActive == false)
                                {
                                    <a href="#@item.ID" class="btn btn-sm btn-default" data-event="active" title="@item.Code"><i class="fa fa-check-square-o"></i></a>
                                }
                            </td>
                            <td>
                                @Grid.ActionView(item.ID, item.Name)
                                @if (item.IsActive == false || Model.IsAdmin)
                                {
                                    @Grid.ActionEdit(item.ID, item.Code)
                                    @Grid.ActionDelete(item.ID, item.Code, item.IsDelete)
                                }
                            </td>
                        </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="12" class="text-center">Không có bản ghi nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
        var total = '@Model.TotalPrice';
        var TotalActive = '@Model.TotalActive';
        var TotalDelete = '@Model.TotalDelete';
        var totalNotActive = '@(Model.TotalPrice - Model.TotalActive - Model.TotalDelete)';
        $('.bottom-pager').append('<span class="footer-control-view">Tổng : <i class="maskPrice">' + total + ' - </i></span>');
        $('.bottom-pager').append('<span class="footer-control-view">Đã duyệt: <i class="maskPrice">' + TotalActive + ' - </i></span>');
        $('.bottom-pager').append('<span class="footer-control-view">Chờ duyệt: <i class="maskPrice">' + totalNotActive + ' - </i></span>');
        $('.bottom-pager').append('<span class="footer-control-view">Đã xóa: <i class="maskPrice">' + TotalDelete + '</i></span>');
    });
</script>
