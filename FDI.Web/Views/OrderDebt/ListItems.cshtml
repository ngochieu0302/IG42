@using FDI.CORE
@model FDI.Simple.ModelOrderDebtItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col class="colgroup action-4" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox"/>
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID</a></th>
                    <th class="text-center">Tên NCC</th>
                    <th class="text-center">Người tạo</th>
                    <th class="text-center">Ngày tạo</th>
                    <th class="text-center">Giá</th>
                    <th class="text-center">Ghi chú</th>
                    <th class="text-center">Thao tác</th>
                </tr>
                </thead>

                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.SupplieName">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td class="text-center">@item.ID</td>
                        <td>@item.SupplieName</td>
                        <td>@item.UserName</td>
                        <td>@item.Datecreate.DecimalToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.Pricetotal.Money()</td>
                        <td>@item.Note</td>
                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.SupplieName)
                            @Grid.ActionEdit(item.ID, item.SupplieName)
                            @Grid.ActionDelete(item.ID, item.SupplieName)
                        </td>
                    </tr>
                }                
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>