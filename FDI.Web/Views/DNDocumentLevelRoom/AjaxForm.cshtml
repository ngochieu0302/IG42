@model FDI.Simple.DNDocumentLevelItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#modalForm").validate({
            rules: {
                Name:
                    {
                        required: true
                        
                    }
            },
            messages: {
                Name:
                {
                    required: "Trường này là bắt buộc."
                }
            },
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });
    });
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thông tin tầng khu
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        @*<div class="form-group">
                            <label class="col-sm-2 control-label">Chọn khu vực cha</label>
                            <div class="col-sm-10">
                                <select name="ParentId" id="ParentId" class="form-control">
                                    <option value="1" data-IsLv="1">-- Chọn tầng --</option>
                                    @foreach (var item in ViewBag.PrarentID)
                                    {
                                        <option value="@item.ID" @((item.ID == Model.ParentId) ? " selected" : string.Empty) data-IsLv="@item.Level">@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>*@

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên tầng</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Sắp xếp</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control" name="Sort" id="Sort" value="@Model.Sort" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox col-md-6">
                                    <label>
                                        @Html.CheckBox("IsShow") Hiện thị
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="close" type="button" data-dismiss="modal" class="btn btn-sm btn-default">Đóng</button>
    </div>
</form>
