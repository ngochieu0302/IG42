@model FDI.Simple.AdvertisingItem

@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}


<div class="modal-body">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-picture-o"></i>Thông tin về banner quảng cáo
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <tr>
                        <td style="width: 15%">
                            <label>Tên banner</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Link</label>
                        </td>
                        <td>
                            @Html.Raw(Model.Link)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Loại banner</label>
                        </td>
                        <td id="type">
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Tên vị trí banner</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.PositionName)
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label>Thứ tự</label>
                        </td>
                        <td>
                            @Html.Raw(Model.Sort)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Hiển thị</label>
                        </td>
                        <td>
                            @Grid.DisplayShow(Model.Name, Model.Show)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label>Nội dung chi tiết</label>
                        </td>
                        <td>
                            @Html.Raw(Model.Content)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
</div>


