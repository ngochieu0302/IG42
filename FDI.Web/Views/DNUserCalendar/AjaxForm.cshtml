@model FDI.Simple.DNUserBedDeskItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        callSelect2("#BedDeskID", "100%");
        $("#modalForm").validate({
            submitHandler: function () { //onSubmit
                PostActionUserid("#modalForm");
            }
        });
    });
</script>

<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID"/>
        <input type="hidden" name="MWSID" id="MWSID" value="@Model.MWSID"/>
        <input type="hidden" name="UserID" id="UserID" value="@Model.UserID"/>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gear"></i>Chọn Phòng hoặc Bàn.
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Chọn Giường hoặc Bàn </label>
                            <div class="col-sm-10">
                                <select id="BedDeskID" name="BedDeskID" class="select2">
                                    <option value="0">Chọn Giường hoặc Bàn</option>
                                    @foreach (var item in ViewBag.DNBedDeskItems)
                                    {
                                        <option value="@item.ID" @(item.ID == Model.BedDeskID ? "selected" : "") >@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-primary">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>
