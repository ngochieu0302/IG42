@model FDI.Simple.ModelCustomerGroupItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" />
                        </th>
                        <th><a href="#Field=ID">ID</a></th>
                        <th><a href="#Field=Name">Nhóm khách hàng</a></th>
                        <th><a href="#Field=Discount">Chiếu khấu</a></th>
                        <th><a href="#Field=TotalPrice">Điều kiện/ĐH</a></th>
                        <th><a href="#Field=Description">Mô tả</a></th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListItem)
                    {
                        <tr data-id="@item.ID" title="@item.Name">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Discount</td>
                            <td>@item.TotalPrice</td>
                            <td>@item.Description</td>
                            <td class="text-right">
                                <a data-id="@item.ID" class="btn btn-sm btn-default"><i class="fa fa-user"></i></a>
                                @Grid.ActionEdit(item.ID, item.Name)
                                @Grid.ActionDelete(item.ID, item.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
