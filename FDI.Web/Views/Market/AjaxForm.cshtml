@using FDI.CORE
@model FDI.Simple.MarketItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script>
    $(function () {
        callSelect2("#AreaID", "100%");
        callSelect2("#WardsID", "100%");
        $("#frm-ShopBrand").validate({
            rules: {
                Name: { required: true },
            },
            messages: {
                Name: "Trường bắt buộc nhập.",
            },
            submitHandler: function () { //onSubmit
                $("#btnSave").attr("disabled", true);
               $.post(urlPostAction, $("#frm-ShopBrand").serialize(), function (data) {
                    $("#btnSave").attr("disabled", false);
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $(".modal").modal('hide');
                        createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&temp=' + Math.floor(Math.random() * 11) + '');
                    }
                });
            }
        });
        $("#Value_CategoryValues").change(function () {
            alert("The text has been changed.");
        });
    })
</script>
<form id="frm-ShopBrand">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thêm mới khu vực
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Tên chợ<font color="red">(*)</font></label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Khu vực<font color="red">(*)</font></label>
                            <div class="col-lg-10">
                                <select id="AreaID" name="AreaID" class="form-control">
                                    <option value="">Chọn khu vực</option>
                                    @foreach (var item in ViewBag.area)
                                    {
                                        <option value="@item.ID" @(Model.AreaID == item.ID ? "selected" : "")>@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Xã/Phường<font color="red">(*)</font></label>
                            <div class="col-lg-10">
                                <select id="WardsID" name="WardsID" class="form-control">
                                    <option value="">Chọn Xã/Phường</option>
                                    @foreach (var item in ViewBag.listCity)
                                    {
                                        <option value="@item.ID" @(Model.WardsID == item.ID ? "selected" : "")>@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Địa chỉ<font color="red">(*)</font></label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" placeholder="..." name="Address" id="Address" value="@Model.Address"/>
                            </div>
                        </div>
                         <div class="form-group">
                            <label class="col-lg-2 control-label">Định vị<font color="red">(*)</font></label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" placeholder="..." name="Coordinates" id="Coordinates" value="@Model.Coordinates"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="close" type="button" data-dismiss="modal" class="btn btn-sm btn-default">Đóng</button>
    </div>
</form>