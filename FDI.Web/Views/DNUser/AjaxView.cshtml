@using FDI.CORE
@model FDI.Simple.DNUserItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div class="modal-body">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gear"></i>Thông tin về nhân viên
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <tr>
                        <td>
                            <label>Họ và tên</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.LoweredUserName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Tên đăng nhập</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.UserName)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Giới tính</label>
                        </td>
                        <td>@(Model.Gender.HasValue ? Model.Gender.Value ? "Nam" : "Nữ" : "")</td>
                    </tr>
                    <tr>
                        <td>
                            <label>Ngày sinh</label>
                        </td>
                        <td>@Model.BirthDay.DecimalToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <td>
                            <label>Email</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Email)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label>Số điện thoại</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Mobile)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label>Địa chỉ</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Address)
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label>Ngày bắt đầu</label>
                        </td>
                        <td>@Model.StartDate.DecimalToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <td>
                            <label>Lương</label>
                        </td>
                        <td>
                            @Model.FixedSalary.Money()
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Khóa tạm thời</label>
                        </td>
                        @if (Model.IsLockedOut == true)
                        {
                            <td>Đã khóa</td>
                        }
                        else
                        {
                            <td>Hoạt động</td>
                        }
                    </tr>
                    <tr>
                        <td>
                            <label>Mã chấm công</label>
                        </td>
                        <td>
                            @Model.CodeCheckIn
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Thuộc phòng ban</label>
                        </td>
                        <td>
                            @string.Join(",",Model.listRole)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Dánh sách module</label>
                        </td>
                        <td>
                            @string.Join(",", Model.ListModule)
                        </td>
                    </tr>  
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
</div>



