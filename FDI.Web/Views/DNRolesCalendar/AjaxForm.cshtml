@model FDI.Simple.DNCalendarItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}


<script type="text/javascript">


    $(document).ready(function () {
        callSelect2("#RoleId", "100%");

        $("#modalForm").validate({
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });

    });
</script>

<form id="modalForm">
    <div class="modal-body">
    <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID"/>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gear"></i>Thông tin về lịch làm việc bộ phận
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Chọn bộ phận</label>
                        <div class="col-sm-10">
                            <select id="RoleId" name="RoleId" multiple class="select2">
                                @foreach (var item in ViewBag.RoleId)
                                {
                                    <option value="@item.RoleId" @(Model.ListDnRolesItem != null && Model.ListDnRolesItem.Any(m=> m.RoleId == item.RoleId) ? "selected" : string.Empty)>@item.RoleName</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-primary">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>
