@using FDI.CORE
@model FDI.Simple.Logistics.OrderCarResponse
    @{
        Layout = "~/Views/Shared/_Ajax.cshtml";
        var i = 1;
    }
    <div id="mygird">
        <div class="box-control">
            <div class="scrollable box-control-content">
                <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                    <colgroup>
                        <col class="colgroup check" />
                        <col class="colgroup indentity" />
                        <col />
                        <col />
                        <col />
                        <col />
                        <col />
                        <col />
                        <col />
                        <col class="colgroup action-4" />
                    </colgroup>
                    <thead>
                        <tr>
                            <th class="act_roles">
                                <input value="" type="checkbox" />
                            </th>
                            <th class="text-center"><a href="#Field=ID">STT</a></th>
                            <th class="text-center">Tên</th>
                            <th class="text-center">Loại</th>
                            <th class="text-center"><a href="#Field=Name">Số ĐT</a></th>
                            <th class="text-center"><a href="#Field=Name">NCC</a></th>
                            <th class="text-center"><a href="#Field=Name">Xưởng</a></th>
                            <th class="text-center"><a href="#Field=Name">Số lượng</a></th>
                            <th class="text-center"><a href="#Field=Name">Sản phẩm</a></th>
                            <th class="text-center"><a href="#Field=Name">Đơn vị</a></th>
                            <th class="text-center"><a href="#Field=Name">Giờ đi</a></th>
                            <th class="text-center"><a href="#Field=Name">Giờ về</a></th>
                            <th class="text-center"><a href="#Field=Name">Trạng thái</a></th>
                            <th class="text-center">Thao tác</th>
                        </tr>
                    </thead>

                    @foreach (var item in Model.ListItem)
                    {
                <tr title="@item.CarName">
                    <td class="act_roles">
                        <input type="checkbox" value="@item.ID" class="check">
                    </td>
                    <td class="text-center">@(i++)</td>
                    <td class="text-center">@item.CarName</td>

                    <td>@item.CarType</td>
                    <td>@item.CarPhone</td>
                    <td>@item.SupplierName</td>
                    <td>@item.WorkshopName</td>
                    <td>@item.Quantity</td>
                    <td>@item.ProductName</td>
                    <td>@item.UnitName</td>
                    <td>@item.DepartureDate.DecimalToString("dd/MM/yyyy hh:mm")</td>
                    <td>@item.ReturnDate.DecimalToString("dd/MM/yyyy hh:mm")</td>
                    <td>@item.Status.GetDisplayName()</td>

                    <td class="text-right">
                        @Grid.ActionRedirect(Url.Action("Index", "OrderCarProductDetail", new { ordercarId = item.ID }), "", "fa fa-cart-arrow-down")
                        @Grid.ActionEdit(item.ID, item.CarName)
                        @Grid.ActionDelete(item.ID, item.CarName)
                    </td>
                </tr>
                    }
                </table>
            </div>
        </div>
        <div class="footer-control">
            @if (Model.PageHtml != null)
            {
                @Html.Raw(Model.PageHtml)
            }
        </div>
    </div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
