@model IEnumerable<FDI.Simple.ContentVoteItem>
@using FDI.CORE
@using FDI.CORE
@{

    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div class="box-control">
    <div class="scrollable box-control-content">
        <div class="list-vote-pa">
            @if (Model != null && Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <div class="box-vote-pa">
                        <div class="clien">
                            <div class="avartar">
                                <div class="avartar-img"></div>
                                <div class="avartar-name">
                                    @item.UserItem.LoweredUserName
                                    <time>@item.DateCreated.DecimalToString("dd/MM/yyyy HH:mm")</time>
                                </div>
                            </div>
                            <div class="text-comments">
                                <b>@item.VoteName</b><br />
                                @item.Content
                            </div>
                        </div>
                        <div class="cus">
                            <div class="name-cus">
                                <i class="fa fa-user"></i>@item.FullName - @item.DNTreeItem.Name
                            </div>
                            <div class="points-lever"><i class="fa fa-level-up"></i><b>@item.LevelName</b><i class="fa fa-star"></i><b>@item.Value</b></div>
                        </div>
                    </div>

                }
            }
            else
            {
                <h4 class="text-center">Không có dữ liệu</h4>
            }
        </div>
    </div>
</div>