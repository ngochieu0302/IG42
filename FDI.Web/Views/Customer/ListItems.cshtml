@using FDI.CORE
@model FDI.Simple.ModelCustomerItem

@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity"/>
                    <col />
                    <col />
                    <col  />
                    <col/>
                    <col  />
                    <col  />
                    <col  />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll" />
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID</a></th>
                    <th class="text-center"><a href="#Field=UserName">Tài khoản</a></th>
                    <th class="text-center"><a href="#Field=CardSerial">Mã thẻ</a></th>
                    <th><a href="#Field=Fullname">Họ tên</a></th>     
                    <th ><a href="#Field=PeoplesIdentity">CMND</a></th>
                    <th ><a href="#Field=Email">Email</a></th>
                    <th><a href="#Field=Phone">Số ĐT</a></th>
                    <th><a href="#Field=Phone">Đại lý</a></th>
                    <th class="text-center"><a href="#Field=CreatedOnUtc">Ngày tạo</a></th>
                    <th class="text-center">Thao tác</th>
                </tr>
                </thead>
                <tbody>

                @{
                    foreach (var item in Model.ListItem)
                    {
                                    <tr title="@item.FullName">
                                        <td class="act_roles">
                                            <input type="checkbox" value="@item.ID" class="check">
                                        </td>
                                        <td class="text-center">@item.ID</td>
                                        <td>@item.UserName</td>
                                        <td>@item.CardSerial</td>
                                        <td>@item.FullName</td>

                                        <td>@item.PeoplesIdentity</td>
                                        <td>@item.Email</td>
                                        <td>@item.Phone</td>
                                        <td>@item.AgencyName</td>
                                        <td>@item.DateCreated.DecimalToString("dd/MM/yyyy")</td>
                                        <td class="text-right">
                                            @Grid.ActionView(item.ID, item.FullName)
                                            @Grid.ActionEdit(item.ID, item.FullName)
                                            @Grid.ActionDelete(item.ID, item.FullName)
                                        </td>
                                    </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
