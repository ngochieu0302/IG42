@using FDI.CORE
@model FDI.Simple.DNCalendarItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        callSelect2("#UserId", "100%");
        callSelect2("#RoleId", "100%");
        $("#modalForm").validate({
            rules: {
                Name: { required: true },
                _DateStart: { required: true },
                _DateEnd: { required: true }
             
            },
            messages: {
                Name: "Mời bạn nhập tên lịch.",
                _DateStart: "Mời bạn chọn ngày bắt đầu",
                _DateEnd: "Mời bạn chọn ngày kết thúc.",
              
                    },
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });
     
    });
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-gear"></i>Thông tin về lịch làm việc
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên lịch</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ngày bắt đầu</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control" name="_DateStart" id="_DateStart" value="@Model.DateStart.DecimalToString("yyyy-MM-dd")" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Ngày kết thúc</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control" name="_DateEnd" id="_DateEnd" value="@Model.DateEnd.DecimalToString("yyyy-MM-dd")" />
                            </div>
                        </div>


                        <div class="form-group">
                            <label class="col-sm-2 control-label">Chọn nhân viên</label>
                            <div class="col-sm-10">
                                <select id="UserId" name="UserId" class="select2" multiple>
                                    <option value="">--- Chọn nhân viên ---</option>
                                    @foreach (var item in ViewBag.UserID)
                                    {
                                        <option  value="@item.UserId" @(Model.ListDnUserItem != null && Model.ListDnUserItem.Any(m => m.UserId == item.UserId) ? "selected" : string.Empty)>@item.UserName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Chọn nhóm</label>
                            <div class="col-sm-10">
                                <select id="RoleId" name="RoleId" class="select2" multiple>
                                    <option value="">--- Chọn nhóm ---</option>
                                    @foreach (var item in ViewBag.RoleId)
                                    {
                                        <option  value="@item.RoleId" @(Model.ListDnRolesItem != null && Model.ListDnRolesItem.Any(m => m.RoleId == item.RoleId) ? "selected" : string.Empty)>@item.RoleName</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Thứ tự hiện thị</label>
                            <div class="col-sm-10">
                                <input type="text" name="Sort" id="Sort" value="@Model.Sort" class="form-control " />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-primary">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>
