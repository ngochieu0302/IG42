@using FDI.CORE
@model FDI.Simple.ModelDNCalendarItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col />
                    <col class="colgroup date" />
                    <col class="colgroup date" />
                    <col/>
                    <col/>
                    <col/>
                    <col/>
                    <col/>
                    <col />
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll"/>
                    <th class="text-center"><a href="#Field=ID">ID</a></th>
                    <th>Tên lịch</th>
                    <th class="text-center">Bắt đầu</th>
                    <th class="text-center">Kết thúc</th>
                    <th>Thứ 2</th>
                    <th>Thứ 3</th>
                    <th>Thứ 4</th>
                    <th>Thứ 5</th>
                    <th>Thứ 6</th>
                    <th>Thứ 7</th>
                    <th>CN</th>
                    <th>Thao tác</th>
                </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check"></td>
                        <td class="text-center">@item.ID</td>
                        <td>@item.Name</td>
                        <td class="text-center">@item.DateStart.DecimalToString("dd/MM/yyyy")</td>
                        <td class="text-center">@item.DateEnd.DecimalToString("dd/MM/yyyy")</td>
                        <td>@string.Join(",", item.WeeklyScheduleItems.Where(m => m.WeeklyID == 1).OrderBy(m => m.ScheduleName).Select(m => m.ScheduleName))</td>
                        <td>@string.Join(",", item.WeeklyScheduleItems.Where(m => m.WeeklyID == 2).OrderBy(m => m.ScheduleName).Select(m => m.ScheduleName))</td>
                        <td>@string.Join(",", item.WeeklyScheduleItems.Where(m => m.WeeklyID == 3).OrderBy(m => m.ScheduleName).Select(m => m.ScheduleName))</td>
                        <td>@string.Join(",", item.WeeklyScheduleItems.Where(m => m.WeeklyID == 4).OrderBy(m => m.ScheduleName).Select(m => m.ScheduleName))</td>
                        <td>@string.Join(",", item.WeeklyScheduleItems.Where(m => m.WeeklyID == 5).OrderBy(m => m.ScheduleName).Select(m => m.ScheduleName))</td>
                        <td>@string.Join(",", item.WeeklyScheduleItems.Where(m => m.WeeklyID == 6).OrderBy(m => m.ScheduleName).Select(m => m.ScheduleName))</td>
                        <td>@string.Join(",", item.WeeklyScheduleItems.Where(m => m.WeeklyID == 7).OrderBy(m => m.ScheduleName).Select(m => m.ScheduleName))</td>
                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.Name)
                            @Grid.ActionEdit(item.ID, item.Name)
                            @Grid.ActionDelete(item.ID, item.Name)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
