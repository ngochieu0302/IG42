@using FDI.CORE
@model FDI.Simple.ModelProductItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var i = 1;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" />
                        </th>
                        <th>STT</th>
                        <th>Tên SP</th>
                        <th class="text-center">Mã SP</th>
                        <th class="text-center">Màu</th>
                        <th class="text-center">Kích thước</th>
                        <th class="text-right">Giá bán</th>
                        <th class="text-right">Giá nhập</th>
                        <th class="text-center">SL Nhập</th>
                        <th class="text-center">SL Xuất</th>
                        <th class="text-center">SL tồn</th>
                        <th class="text-right">Giá gốc</th>
                        <th class="text-right">Giá trị tồn</th>
                        <th class="text-center">Ngày Nhập</th>
                        <th class="text-center">HSD</th>
                        @*<th>Thao tác</th>*@
                    </tr>
                </thead>
                <tbody>
                    @if (Model.ListItem != null)
                    {
                        foreach (var item in Model.ListItem)
                        {
                            var q = (item.Quantity ?? 0) - (item.QuantityOut ?? 0);
                            var d = q*item.PriceNew;
                        <tr data-id="@item.ID" title="@item.Name">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td class="text-center">@(i++)</td>
                            <td>@Grid.DisplayShowStrike(item.Name, item.IsShow == true)</td>
                            <td class="text-center">@item.CodeSku</td>
                            <td class="text-center">
                                <div style="width: 45px; height: 25px; background-color: @item.ColorName; border: 1px solid #ccc;"></div>
                            </td>
                            <td class="text-center">@item.SizeName</td>
                            <td class="text-right">@item.PriceNew.Money()</td>
                            <td class="text-right">@item.PriceOld.Money()</td>
                            <td class="text-center">@(item.Quantity ?? 0)</td>
                            <td class="text-center">@(item.QuantityOut ?? 0)</td>
                            <td class="text-center">@q</td>
                            <td class="text-right">@(string.Format("{0:0,0}",q*item.PriceOld))</td>
                            <td class="text-right">@(string.Format("{0:0,0}",q*item.PriceNew))</td> 
                            <td class="text-center">@item.CreateDate.DecimalToString("dd/MM/yyyy")</td>
                            <td class="text-center">@item.DateEnd.DecimalToString("dd/MM/yyyy")</td>
                            @*<td class="text-right">
                                @Grid.ActionView(item.ID, item.Name)
                            </td>*@
                        </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    function OpenInNewTab(url) {
        var win = window.open(url, '_blank');
        win.focus();
    }
</script>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
        var total = '@Model.Total.Money()';
        var totalOld = '@Model.TotalOld.Money()';
        var totalQuantity = '@Model.Quantity';
        $('.bottom-pager').append('<span>Số lượng tồn: <i>' + totalQuantity + '</i></span><span>- Giá trị tồn: <i>' + totalOld + '</i></span><span>- Giá trị tồn: <i>' + total + '</i></span>');
     });
</script>
