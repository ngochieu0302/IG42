@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
    var Index = 0;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#modalForm").validate({
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });
    });
</script>
<form id="TMCategoryAppGameForm">
    <div class="modal-body">
        <input type="hidden" id="do" name="do" value="Order" />
        <input type="hidden" id="OrderValues" name="OrderValues" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thông tin về danh mục
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Xắp xếp</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <select name="ViewOrder@(Index)" id="@item.ID" onchange="Reorder(this, @Index, @Model.Count)">
                                        @for (var number = 1; number < Model.Count + 1; number++)
                                        {
                                            <option value="@number" @((number == Index + 1) ? " selected" : string.Empty)>@number</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            Index++;
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-success">Đóng lại</button>
    </div>
</form>
