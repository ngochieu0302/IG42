@using FDI.CORE
@model FDI.Simple.TMAppGameItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div class="modal-body">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-picture-o"></i>Thông tin về game/ứng dụng
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <tr>
                        <td style="width: 15%">
                            <label>Tên game/ứng dụng</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="width: 15%">
                            <label>Mô tả</label>
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Description)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="width: 15%">
                            <label>Hình ảnh</label>
                        </td>
                        <td>
                           
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="width: 15%">
                            <label>Tác giả</label>
                        </td>
                        <td>
                           @Model.Author
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="width: 15%">
                            <label>Lượt tải</label>
                        </td>
                        <td>
                           @(Model.Download ?? 0)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="width: 15%">
                            <label>Lượt xem</label>
                        </td>
                        <td>
                            @(Model.Click ?? 0)
                        </td>
                    </tr>
                    
                    <tr>
                        <td style="width: 15%">
                            <label>Trạng thái</label>
                        </td>
                        <td>
                            @(Model.Status == true ? "Miễn phí" : "Có phí")
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label>Ngày tạo</label>
                        </td>
                        <td>
                            @Model.CreateDate.DecimalToString("dd/MM/yyyy HH:ss:mm")
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label>Người tạo</label>
                        </td>
                        <td>
                            @Model.UserCreate
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label>Ngày cập nhật</label>
                        </td>
                        <td>
                            @Model.DateUpdated.DecimalToString("dd/MM/yyyy HH:ss:mm")
                        </td>
                    </tr>
                    
                    <tr>
                        <td>
                            <label>Người cập nhật</label>
                        </td>
                        <td>
                            @Model.UserUpdate
                        </td>
                    </tr>
                 
                    <tr>
                        <td>
                            <label>Hiện thị</label>
                        </td>
                        <td>
                            @Grid.DisplayShow(Model.Name, Model.IsShow)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
</div>


