@using FDI.CORE
@using FDI.CORE
@model FDI.Simple.ModelEditScheduleItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check"/>
                    <col class="colgroup custommer"/>
                    <col class="colgroup size" />
                    <col class="colgroup price" />
                    <col class="colgroup price" />
                    <col class="colgroup price"/>
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll"/>
                        </th>
                        <th>Tên nhân viên</th>
                        <th>Username</th>
                        <th class="text-center">Kiểu</th>
                        <th class="text-center">Ca</th>
                        <th class="text-center">Ngày đổi</th>
                        <th >Lý do</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr>
                        <td class="act_roles"><input type="checkbox" value="@item.ID" class="check"></td>
                        <td>@item.UserNameChange</td>
                        <td>@item.UserName</td>
                        <td class="text-center">
                            @{
                                if (item.Type == 1)
                                {
                                    <text>Tăng ca</text>
                                }
                                else if (item.Type == 2)
                                {
                                    <text>Giảm ca</text>
                                }
                                else
                                {
                                    <text>Đổi ca ca</text>
                                }
                            }
                        </td>
                        <td class="text-center">@item.ScheduleName</td>
                        <td class="text-center">@item.Date.DecimalToDate().AddYears(-1).ToString("dd/MM/yyyy")</td>
                        <td >@item.Name</td>
                        <td>
                            @Grid.ActionView(item.ID, item.ID.ToString())
                            @Grid.ActionEdit(item.ID, item.ID.ToString())
                            @Grid.ActionDelete(item.ID, item.ID.ToString())
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>