@model FDI.Simple.DNSalaryItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#modalForm").validate({
            rules: {
                Name: { required: true },
                Month: { required: true },
                Year: { required: true },
                Salary: { required: true },
            },
            messages: {
                Name: "Mời bạn nhập tên nhân viên",
                Month: "Mời bạn chọn ngày bắt đầu",
                Year: "Mời bạn chọn ngày kết thúc.",
                Salary: "Nhập số tiền lương",
            },
            submitHandler: function () { //onSubmit
                PostAction("#modalForm");
            }
        });

    });
</script>


<form id="modalForm">
    <div class="modal-body">
    <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID"/>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gear"></i>Thông tin về lương
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-horizontal">
             
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Chọn nhân viên</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.UserId"/>
                        </div>
                    </div>
                    
                      <div class="form-group">
                        <label class="col-sm-2 control-label">Tháng</label>
                        <div class="col-sm-10">
                            <input type="text" name="Month" id="Month" value="@Model.Month" class="form-control"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Năm</label>
                        <div class="col-sm-10">
                            <input type="text" name="Year" id="Year" value="@Model.Year" class="form-control"/>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Lương</label>
                        <div class="col-sm-10">
                            <input type="text" name="Salary" id="Salary" value="@Model.Salary" class="form-control"/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-primary">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>
