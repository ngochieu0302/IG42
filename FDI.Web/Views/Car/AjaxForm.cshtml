@using FDI.CORE
@model FDI.Simple.Logistics.CarItem
@{
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">

    $(function () {

        $("#modalForm").validate({
            rules: {
                CateId:
                {
                    required: true,
                },

                Quantity: {
                    required: true,
                },
            },
            messages: {
                CateId:
                {
                    required: "Chọn sản phẩm."
                },

                Quantity: {
                    required: "Nhập số lượng."
                }
            },
            submitHandler: function () {
                PostAction("#modalForm");
            }
        });

    });
</script>
<form id="modalForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ID" id="ID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-picture-o"></i>Thông tin về sản phẩm
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">


                        <div class="form-group">
                            <label class="col-md-2 control-label">Tên</label>
                            <div class="col-md-10">
                                <input type="text" name="Name" id="Name" value="@Model.Name" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Loại</label>
                            <div class="col-md-10">
                                <input type="text" name="CarType" id="CarType" value="@Model.CarType" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Điện thoại</label>
                            <div class="col-md-10">
                                <input type="text" name="Phone" id="Phone" value="@Model.Phone" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Số lượng</label>
                            <div class="col-md-10">
                                <input type="text" name="Quantity" id="Quantity" value="@Model.Quantity" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Đơn vị</label>
                            <div class="col-md-10">
                                <select name="UnitID" id="UnitID" class="form-control">
                                    <option value="1" data-IsLv="0">-- Chọn đơn vị --</option>
                                    @foreach (var item in ViewBag.lstCate)
                                    {
                                        <option @(item.ID == Model.UnitID ? "selected" : "") value="@item.ID">@item.Name</option>
                                    }
                                </select>

                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Latitude</label>
                            <div class="col-md-10">
                                <input type="text" name="Latitude" id="Latitude" value="@Model.Latitude" class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-2 control-label">Longitude</label>
                            <div class="col-md-10">
                                <input type="text" name="Longitude" id="Longitude" value="@Model.Longitude" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>

