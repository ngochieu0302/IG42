@helper DisplayShow(string title, bool? status)
{
    title = string.IsNullOrEmpty(title) ? (status == true ? "Đang đượcc kích hoạt" : "Đang ẩn") : title;
    <i class="@(status == true ? "fa fa-check text-success" : "fa fa-times text-danger tex")" title="@title"></i>
}
@helper DisplayShowStrike(string title, bool isShow)
{
    if (isShow)
    {
        @title
    }
    else
    {
        <strike>@title</strike>
    }
}

