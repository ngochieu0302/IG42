@helper ActionEdit(object id, IDictionary<string, object> lst, string title, bool check = true)
{
    if (BaseController.CheckAction("edit"))
    {
        var url = id + "";
        foreach (var o in lst)
        {
            url += "&" + o.Key + "=" + o.Value;
        }
        <a href="#@url" class="@(check ? ("btn btn-sm btn-default") : "")" data-event="edit" title="@title"><i class="fa fa-pencil-square-o" style="color: #04A827;"></i></a>
    }
}

