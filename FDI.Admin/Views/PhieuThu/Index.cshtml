@model FDI.Simple.ModelThuChiItem
@{
    ViewBag.Title = "Quản lý thông tin đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutNew.cshtml";
}
<script src="/Content/Admin/js/numeral.min.js"></script>
<script src="/Areas/Admin/Content/js/pt-script.js"></script>
<script>
    $(function () {
        $("#btn_Export").click(function () {
            var form = $("#gridSearch");
            window.location.href = '@Url.Action("ExportExcel", "PhieuThu")' + '?' + getValueFormMutilSelect(form);
            return false;
        });
    });
</script>
<section id="content">
    <section class="hbox stretch">
        <aside>
            <section class="vbox">
                <header class="header bg-white b-b clearfix">
                    <ul class="breadcrumb no-border no-radius b-b b-light m-l-15x m-r-15x">
                        <li><a href="/Admin/Admin"><i class="fa fa-home"></i>Home</a></li>
                        <li class="active">Quản lý hóa đơn </li>
                    </ul>
                    <div class="row m-t-sm">
                        <div class="col-sm-10 m-b-xs">
                            <form id="gridSearch" class="form-inline" role="form">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-default" title="Filter" data-toggle="dropdown"><span class="caret"></span></button>
                                    <ul class="dropdown-menu">
                                        <li><a href="#activeAll" data-event="activeAll" data-grid="#mygird"><i class="fa fa-check icon-muted fa-fw"></i><span class="text">Duyệt</span></a></li>
                                        <li class="divider"></li>
                                        <li><a href="#deleteAll" data-event="deleteAll" data-grid="#mygird"><i class="fa fa-trash-o icon-muted fa-fw"></i><span class="text">Xóa</span></a></li>
                                    </ul>
                                </div>

                                <div class="form-group">
                                    <label class="sr-only" for="Keyword">Từ khóa tìm kiếm</label>
                                    <input type="text" class="form-control input-sm" id="Keyword" name="Keyword" placeholder="Từ khóa tìm kiếm">
                                </div>
                                <div class="form-group">
                                    <select name="SearchIn" id="SearchIn" class="form-control input-sm">
                                        <option value="code">Mã phiếu</option>
                                    </select>
                                </div>
                                @Html.Action("SelectShop", "Shop")
                                <div class="form-group">
                                    <div class="form-group">
                                        <input class="datepicker-input form-control input-sm" name="toDate" size="16" data-date-format="dd/mm/yyyy" value="@Model.ToDate.ToString("dd/MM/yyyy")" placeholder="Từ ngày">
                                    </div>
                                    <div class="form-group">
                                        <input class="datepicker-input form-control input-sm" name="endDate" size="16" data-date-format="dd/mm/yyyy" value="@Model.EndDate.ToString("dd/MM/yyyy")" placeholder="Đến ngày">
                                    </div>
                                </div>
                                <button name="submit.Search" type="submit" class="btn btn-sm btn-primary">Tìm kiếm</button>
                            </form>
                        </div>
                        <div class="col-sm-2 m-b-xs">
                            @if (Model.SystemActionItem.Add)
                            {
                                <a class="btn btn-sm btn-primary" id="btn_add">Tạo phiếu thu</a>
                                <a class="btn btn-sm btn-primary" id="btn_Export">Export</a>
                            }
                        </div>
                        <div class="col-sm-1 m-b-xs">
                        </div>
                    </div>
                </header>
                <section id="Griditems" class="m-t-lg">
                </section>
            </section>
        </aside>
    </section>
    <a href="#" class="hide nav-off-screen-block" data-toggle="class:nav-off-screen" data-target="#nav"></a>
</section>
