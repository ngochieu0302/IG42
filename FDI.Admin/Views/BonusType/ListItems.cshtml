@using FDI.CORE
@model FDI.Simple.ModelBonusTypeItem

@{
    ViewBag.Title = "ListItems";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col />
                    <col />
                    <col class="colgroup price" />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll" />
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID</a></th>
                    <th><a href="#Field=CardSerial">Tích lũy khách hàng</a></th>
                    <th><a href="#Field=Price">Tích lũy người giới thiệu</a></th>
                    <th class="text-center"><a href="#Field=Percent">Ngày tạo</a></th>
                    <th class="text-center">Thao tác</th>
                </tr>
                </thead>
                <tbody>

                @{
                    foreach (var item in Model.ListItems)
                    {
                        <tr title="@item.Name">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td class="text-center">@item.ID</td>
                            <td>@item.Percent</td>
                            <td>@item.PercentParent</td>
                            <td class="text-center">@item.DateCreate.DecimalToString("dd/MM/yyyy")</td>
                            <td>
                                @Grid.ActionView(item.ID, item.Name)
                                @Grid.ActionEdit(item.ID, item.Name)
                                @Grid.ActionDelete(item.ID, item.Name)
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
