@model FDI.Base.BonusType
@{
    ViewBag.Title = ViewBag.ActionText + " Khách hàng";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#CustomerForm").validate({
            rules: {
                Name:
                {
                    required: true,
                    minlength: 3
                },
                Price:{required: true},
                Percent: { required: true }
            },
            messages: {
                Name:
                {
                    required: "Trường này là bắt buộc.",
                    minlength: "Vui lòng nhập ít nhất 3 ký tự."
                },
                Price: { required: "Trường này là bắt buộc." },
                Percent: { required: "Trường này là bắt buộc." }
            },
            submitHandler: function () { //onSubmit
                $('.maskPrice').each(function (i) {
                    $(this).val($(this).val().replace(/\,/g, ''));
                });
                $.post(urlPostAction, $("#CustomerForm").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").modal('hide');
                        var linkFw = '#Page=' + getParameters("Page", 1) + '&RowPerPage=' + getParameters("RowPerPage", 10);
                        createCloseMessage("Thông báo", data.Message, linkFw + '&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + '');}
                });
                return false;
            }
        });
    });
</script>
<form id="CustomerForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-user"></i>Thông tin loại thưởng
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                      <div class="form-group">
                            <label class="col-lg-3 control-label">Tích lũy khách hàng</label>
                            <div class="col-lg-9">
                               <input type="number" class="form-control" name="Percent" id="Percent" value="@Model.Percent"/>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">Tích lũy người giới thiệu</label>
                            <div class="col-lg-9">
                               <input type="number" class="form-control" name="PercentParent" id="PercentParent" value="@Model.PercentParent"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
    </div>
</form>