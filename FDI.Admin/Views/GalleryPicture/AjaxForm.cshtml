@model FDI.Base.Gallery_Picture
@{
    ViewBag.Title = ViewBag.ActionText + " danh sách hình ảnh";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(function () {
        registerGallery();
        LoadCKEDITOR('Description', false);
        $("#GalleryPictureForm").validate({
            rules: {
                Name:
                {
                    required: true,
                    minlength: 3,
                    maxlength: 100
                },
                Description:
                {
                    minlength: 15
                },
                CategoryID: {
                    required: true
                },
            },
            messages: {
                Name:
                {
                    required: "Trường bắt buộc nhập.",
                    minlength: "Tên quá ngắn.",
                },
                Description:
                {
                    minlength: "Mô tả quá ngắn."
                },
                CategoryID: {
                    required: "Chưa chọn chuyên mục."
                },
            },
            submitHandler: function () {
                updateEditor();
                getValueFromAutoTag('listProductValues', 'ProductValues');
                getValueFromAutoTag('listTagValues', 'TagValues');

                $.post(urlPostAction, $("#GalleryPictureForm").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").modal('hide');
                        var linkFW = '#Page=' + getParameters("Page", 1) + '&RowPerPage=' + getParameters("RowPerPage", 10);
                        createCloseMessage("Thông báo", data.Message, linkFW + '&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + '');
                    }
                });
                return false;
            }
        });

    });
</script>

<form id="GalleryPictureForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="type" id="type" value="@Model.Type " />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <input type="hidden" name="ProductValues" id="ProductValues" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-picture-o"></i>Thông tin về hình ảnh
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Tên hình ảnh</label>
                            <div class="col-lg-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">Hình ảnh</label>
                            <div class="col-lg-10">
                                <div id="Text_DefaultImages">
                                    <div class="gridView list-images-popup">
                                        @if (Model.ID > 0)
                                        {
                                            <div class="image-product" id="@Model.ID">
                                                <div class="image">
                                                    @Gallery.DisplayImage(Model.Folder + Model.Url, 120)
                                                </div>
                                                <span>@Model.Name</span>

                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">Chuyên mục</label>
                            <div class="col-lg-10">
                                <select name="CategoryID" id="CategoryID" class="form-control">
                                    <option value="">-- Chọn chuyên mục --</option>
                                    @foreach (var item in ViewBag.PictureCategoryID)
                                {
                                        <option value="@item.ID" @((item.ID == Model.CategoryID) ? " selected" : string.Empty)>@item.Name</option>
                                }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-lg-2 control-label">Mô tả (Excerpt)</label>
                            <div class="col-lg-10">
                                <textarea rows="5" class="form-control" placeholder="..." name="Description" id="Description">@Model.Description</textarea>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <div class="checkbox col-md-12">
                                    <label>
                                        @Html.CheckBox("IsShow") Hiện thị
                                    </label>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-success">Đóng lại</button>
    </div>
</form>
