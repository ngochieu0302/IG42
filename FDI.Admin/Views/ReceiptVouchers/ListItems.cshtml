@using FDI.CORE
@model FDI.Simple.ModelReceiptPaymentItem
@{
    ViewBag.Title = "Loại thu chi";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll"/>
                    </th>
                    <th>STT</th>
                    <th><a href="#Field=ID">ID</a></th>
                    <th><a href="#Field=DateReturn">Đối tượng</a></th>
                    <th><a href="#Field=CostName">Loại phiếu</a></th>
                    <th><a href="#Field=Price">Thanh toán</a></th>
                    <th><a href="#Field=CostName">Ngày tạo</a></th>
                    
                    <th><a href="#Field=Price">Số tiền thu</a></th>
                    <th><a href="#Field=UserID">Ngày ghi nhận</a></th>
                    <th><a href="#Field=UserID">TT</a></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ListItem)
                    {
                        <tr data-id="@item.ID" title="@item.Name">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td>@item.ID</td>
                            @if (item.Type == 0)
                            {
                                <td>Nhân viên</td>
                            }
                            else if (item.Type == 1)
                            {
                                <td>Khách hàng</td>
                            }
                            else
                            {
                                <td>Đối tượng khác</td>
                            }
                            @if (item.CostTypeID != null)
                            {
                                <td>@item.CostTypeName</td>
                            }
                            else
                            {
                                <td>Tự động</td>
                            }                            
                            @if (item.PaymentMethodId == (int)PaymentMethod.Transfer)
                            {
                                <td>Chuyển khoản</td>
                            }
                            else if (item.PaymentMethodId == (int)PaymentMethod.Cash)
                            {
                                <td>Tiền mặt</td>
                            }
                            else
                            {
                                <td>Khác</td>
                            }
                            <td>@string.Format("{0:0,0}", item.Price)</td>
                            <td>@item.DateReturn.DecimalToString("dd/MM/yyyy")</td>
                            @if (item.IsActive == true)
                            {
                                <td><label class="label label-info">Đã duyệt</label></td>
                            }
                            else
                            {
                                <td><label class="label label-default">Chờ duyệt</label></td>
                            }
                            <td></td>
                            <td class="text-right">
                                @Grid.ActionActive(item.ID, item.CustomerName, item.IsActive)
                                @Grid.ActionView(item.ID, item.Name)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
