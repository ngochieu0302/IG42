@using FDI.CORE
@model FDI.Simple.ModelCustomerItem

@{
    ViewBag.Title = "ListItems";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup order" />
                    <col/>
                    <col />
                    <col/>
                    <col/>
                    <col/>
                    <col/>
                    <col/>
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll" />
                    </th>
                    <th class="text-center"><a href="#Field=ID">Level</a></th>
                    <th><a href="#Field=UserName">Tài khoản</a></th>
                    <th><a href="#Field=Fullname">Họ tên</a></th>
                    <th class="text-center"><a href="#Field=CardSerial">Mã thẻ</a></th>
                    <th class="text-center"><a href="#Field=PeoplesIdentity">CMND</a></th>
                    <th><a href="#Field=Email">Email</a></th>
                    <th class="text-center"><a href="#Field=Mobile">Số ĐT</a></th>
                    <th class="text-center"><a href="#Field=CreatedOnUtc">Ngày tạo</a></th>
                    <th class="text-center"><a href="#Field=Count">Giới thiệu</a></th>
                    <th>Thao tác</th>
                </tr>
                </thead>
                <tbody>

                @{
                    foreach (var item in Model.ListItem)
                    {
                        <tr title="@item.FullName">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td>@item.UserName</td>
                            <td>@item.FullName</td>
                            <td class="text-center">@item.CardSerial</td>
                            <td class="text-center">@item.PeoplesIdentity</td>
                            <td  >@item.Email</td>
                            <td class="text-center">@item.Phone</td>
                            <td class="text-center">@item.DateCreated.DecimalToString("dd/MM/yyyy")</td>
                     
                            <td class="text-right">
                                @Grid.ActionView(item.ID, item.FullName)
                                @Grid.ActionEdit(item.ID, item.FullName)
                                @Grid.ActionDelete(item.ID, item.FullName)
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
