@model FDI.Base.DN_NewsSSC
@{
    ViewBag.Title = ViewBag.ActionText + " Quản lý tin tức";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}

<script type="text/javascript">
    $(document).ready(function () {
        $("#DNNewsSSCForm").validate({
            rules: {
                Title:
                {
                    required: true,
                    maxlength: 300
                }
            },
            messages: {
                Title: "Xin mời nhập tiêu đề",
               
            },
            submitHandler: function () { //onSubmit
                $.post(urlPostAction, $("#DNNewsSSCForm").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").modal('hide'); //Đóng form thêm mới - sửa
                        createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + ''); // Tạo thông báo khi click đóng thì chuyển đến url đích
                    }
                });
                return false;
            }
        });


    });
</script>
<form id="DNNewsSSCForm">
    <div class="modal-body">
    <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID"/>
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-gear"></i>Thông tin về tin tức cho thành viên
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <div class="form-horizontal">
                    
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Chọn đại lý</label>
                        <div class="col-lg-10">
                            <select name="AgencyID" id="AgencyID" class="form-control">
                                @foreach (var item in ViewBag.AgencyID)
                                {
                                    <option value="@item.ID" @((item.ID == Model.AgencyID) ? " selected" : string.Empty)>@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Tiêu đề</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" placeholder="..." name="Title" id="Title" value="@Model.Title"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Nội dung</label>
                        <div class="col-lg-10">
                            <textarea rows="8" id="Content" name="Content" class="form-control">@Model.Content</textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <div class="checkbox col-md-6">
                                <label>
                                    @Html.CheckBox("IsShow") Hiện thị
                                </label>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    </div>

    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-primary">Nhập lại</button>
        <button id="close" type="button" class="btn btn-sm btn-primary">Đóng lại</button>
    </div>
</form>
