@model FDI.Simple.ModelDNNewsSSCItem
@{
    ViewBag.Title = "ListCity";
    Layout = "~/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col />
                    <col class="colgroup price" />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll" />
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID</a></th>
                    <th>Tiêu đề</th>
                    <th class="text-center"><a href="#Field=Show">Hiển thị</a></th>
                    <th>Thao tác</th>
                </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.Title">
                        <td class="act_roles"><input type="checkbox" value="@item.ID" class="check"></td>
                        <td class="text-center">@item.ID</td>
                        <td>@Grid.DisplayShowStrike(item.Title, item.IsShow.HasValue && item.IsShow.Value)</td>
                        <td class="text-center">@Grid.ActionShow(item.ID, item.Title, item.IsShow)</td>
                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.Title)
                            @Grid.ActionEdit(item.ID, item.Title)
                            @Grid.ActionDelete(item.ID, item.Title)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>