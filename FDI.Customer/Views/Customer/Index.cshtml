@model List<FDI.Simple.CustomerItem>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Thành viên giới thiệu";
    var stt = 1;
}

<div class="page-head">
    <div class="container">
        <div class="page-title">
            <h1>
               Thành viên hệ thống
                <small>Danh sách thành viên trong hệ thống đã giới thiệu</small>
            </h1>
        </div>
    </div>
</div>
<div class="page-content">
    <div class="container">
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="/">Home</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Thành viên</span>
            </li>
        </ul>
        <div class="page-content-inner">
            <div class="row">
                <div class="col-md-4">
                    <!-- BEGIN WIDGET THUMB -->
                    <div class="widget-thumb widget-bg-color-white text-uppercase margin-bottom-20 ">
                        @*<h4 class="widget-thumb-heading"></h4>*@
                        <div class="widget-thumb-wrap">
                            <i class="widget-thumb-icon bg-green icon-bulb"></i>
                            <div class="widget-thumb-body">
                                <span class="widget-thumb-subtitle">Tổng thành viên</span>
                                <span class="widget-thumb-body-stat" data-counter="counterup" data-value="">@Model.Count</span>
                            </div>
                        </div>
                    </div>
                    <!-- END WIDGET THUMB -->
                </div>
                <div class="col-md-12">
                    <div class="portlet light ">
                        <div class="portlet-title">
                            <div class="caption">
                                <i class="fa fa-list font-dark"></i>
                                <span class="caption-subject font-dark sbold uppercase">Danh sách thành viên</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            <table class="table table-striped table-bordered table-hover table-checkable">
                                <thead>
                                <tr>
                                    @*<th>
                                            <input type="checkbox" class="group-checkable" />
                                        </th>*@
                                    <th class="text-center"> STT </th>
                                    <th> Họ tên </th>
                                    <th class="text-center"> Điện thoại </th>
                                    <th> Email </th>
                                    <th> Địa chỉ </th>
                                </tr>
                                </thead>
                                <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        @*<td>
                                                <input type="checkbox" class="checkboxes" value="1" />
                                            </td>*@
                                        <td class="text-center"> @(stt++) </td>
                                        <td> @item.FullName </td>
                                        <td class="text-center"> @item.Phone </td>
                                        <td> @item.Email </td>
                                        <td>@item.Address</td>
                                    </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- END EXAMPLE TABLE PORTLET-->
                </div>
            </div>
          
        </div>
        <!-- END PAGE CONTENT INNER -->
    </div>
</div>>
