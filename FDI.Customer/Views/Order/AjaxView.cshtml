@using FDI.Utils
@model FDI.Simple.OrderItem
@{
    var stt = 1;
}
<div class="modal-body">
    <div class="portlet box light">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-newspaper-o"></i>Thông tin đơn hàng
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <colgroup>
                        <col style="width: 30%" />
                        <col />
                    </colgroup>
                    <tr>
                        <td>
                            <label>Khách hàng</label>
                        </td>
                        <td>
                            @Model.CustomerName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Điện thoại</label>
                        </td>
                        <td>
                            @Model.CutomerPhone
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Địa chỉ</label>
                        </td>
                        <td>
                            @Model.CutomerAddress
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Ngày tạo</label>
                        </td>
                        <td>
                            @Model.DateCreated.DecimalToString("dd/MM/yyyy HH:mm")
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Vị trí</label>
                        </td>
                        <td>
                            @Model.BedDeskName
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Tổng tiền</label>
                        </td>
                        <td>
                            @string.Format("{0:0,0}", Model.TotalPrice)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Chiết khấu</label>
                        </td>
                        <td>
                            @string.Format("{0:0,0}", Model.Discount)
                        </td>
                    </tr>
                    <tr>

                        <td>
                            <label>Trừ điểm tích lũy</label>
                        </td>
                        <td>
                            @string.Format("{0:0,0}", Model.PrizeMoney)
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <label>Thanh toán</label>
                        </td>
                        <td>
                            @string.Format("{0:0,0}", Model.TotalPrice - Model.Discount - Model.PrizeMoney)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="portlet box light">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-cart-plus"></i>Chi tiết đơn hàng
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <tr>
                        <th class="text-center">STT</th>
                        <th >Tên SP</th>
                        <th class="text-center">DVT</th>
                        <th class="text-right">Giá bán</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-right">Thành tiền</th>
                    </tr>
                    @foreach (var item in Model.LstOrderDetailItems)
                    {
                        <tr>
                            <td class="text-center">@(stt++)</td>
                            <td>@(string.IsNullOrEmpty(item.ComboName) ? item.ProductName : item.ComboName)</td>
                            <td class="text-center">@item.UnitName</td>
                            <td class="text-right">@string.Format("{0:0,0}", item.Price)</td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-right">@string.Format("{0:0,0}", item.Price * item.Quantity)</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-default btn-sm">Đóng</button>
</div>