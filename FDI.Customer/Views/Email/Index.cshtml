@using FDI.Utils
@model FDI.Simple.ModelDNMailSSCItem
@{
    ViewBag.Title = "Hộp thư thành viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <ul class="page-breadcrumb breadcrumb">
            <li>
                <a href="/">Trang chủs</a>
                <i class="fa fa-circle"></i>
            </li>
            <li>
                <span>Hộp thư thành viên</span>
            </li>
        </ul>
        <div class="inbox">
            <div class="row">
                <div class="col-md-3">
                    @Html.Action("BoxMail", "Email")
                </div>
                <div class="col-md-9">
                    <div class="inbox-body">
                        <h3 class="page-title">
                            <text>Hộp thư đến</text>
                        </h3>
                        <div class="inbox-content" id="inbox-content">
                            <input type="hidden" value="" id="lstID">

                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th colspan="4">
                                            <input type="checkbox" class="chkAll" />
                                            <div class="btn-group input-actions">
                                                <a class="btn btn-sm blue btn-outline dropdown-toggle sbold" href="javascript:;" data-toggle="dropdown">Thao tác
                                            <i class="fa fa-angle-down"></i>
                                                </a>
                                                <ul class="dropdown-menu">
                                                    @{
                                                        var textSpam = "";
                                                        var idSpam = "";
                                                        var textDelete = "";
                                                        var idDelete = "";
                                                        var dataAction = 0;
                                                        switch (Model.Type)
                                                        {
                                                            case 1:
                                                                textSpam = "Báo cáo Spam";
                                                                idSpam = "reportSpam";
                                                                textDelete = "Xóa";
                                                                idDelete = "reportDelete";
                                                                dataAction = 1;
                                                                break;
                                                            case 2:
                                                                textSpam = "Báo cáo Spam";
                                                                idSpam = "reportSpam";
                                                                textDelete = "Xóa";
                                                                idDelete = "reportDelete";
                                                                dataAction = 2;
                                                                break;
                                                            case 3:
                                                                textSpam = "Chuyển tới Hộp thư đến";
                                                                idSpam = "MoveMailbox";
                                                                textDelete = "Hủy thư nháp";
                                                                idDelete = "btnDeleteDrafts";
                                                                dataAction = 3;
                                                                break;
                                                            case 4:
                                                                textSpam = "Không phải Spam";
                                                                idSpam = "NoReportSpam";
                                                                textDelete = "Xóa vĩnh viễn";
                                                                idDelete = "btnDelete";
                                                                dataAction = 4;
                                                                break;
                                                            case 5:
                                                                textSpam = "Báo cáo Spam";
                                                                idSpam = "reportSpam";
                                                                textDelete = "Xóa vĩnh viễn";
                                                                idDelete = "btnDelete";
                                                                dataAction = 5;
                                                                break;
                                                        }
                                                        <li>
                                                            <a href="javascript:;" id="@idSpam" data-type="@(Model.Type == 4 ? 0 : 1)" data-status="@dataAction">
                                                                <i class="fa fa-ban"></i>@textSpam
                                                            </a>
                                                        </li>
                                                    
                                                        <li>
                                                            <a href="javascript:;" id="@idDelete" data-type="@(Model.Type == 5 ? 0 : 1)" data-status="@dataAction">
                                                                <i class="fa fa-trash-o"></i>@textDelete
                                                            </a>
                                                        </li>
                                                    }
                                                </ul>
                                            </div>
                                        </th>
                                        <th class="pagination-control" colspan="3">
                                            <span class="pagination-info">Tổng: <span id="TotalRecord">0</span> </span>
                                            <a class="btn btn-sm blue btn-outline">
                                                <i class="fa fa-angle-left"></i>
                                            </a>
                                            <a class="btn btn-sm blue btn-outline">
                                                <i class="fa fa-angle-right"></i>
                                            </a>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody id="contentEmail">
                                    @if (Model.ListItem != null)
                                    {
                                        foreach (var item in Model.ListItem)
                                        {
                                        <tr class="@(item.Status == 0 && Model.Type == 1 ? "unread" : string.Empty)" data-id="@item.ID">
                                            <td>
                                                <input type="checkbox" class="chkEmail" value="@item.ID">
                                            </td>
                                            <td class="inbox-small-cells">
                                                <i class="fa fa-star"></i>
                                            </td>
                                            <td class="view-message hidden-xs"><a data-id="@item.ID" class="titleEmail">@item.CustomerSendName</a></td>
                                            <td class="view-message "><a data-id="@item.ID" class="titleEmail">@item.Title</a></td>
                                            <td class="view-message inbox-small-cells">
                                                <i class="fa fa-paperclip"></i>
                                            </td>
                                            <td class="view-message text-right"><a data-id="@item.ID" class="titleEmail">@Utility.DecimalToDatetime(item.CreateDate).ToString("dd/MM/yyyy HH:mm:ss")</a></td>
                                        </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

</script>