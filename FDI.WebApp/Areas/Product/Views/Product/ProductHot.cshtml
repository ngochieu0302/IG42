@using FDI.Utils
@model FDI.Simple.ModelCategoryItem
@{
    var pageId = WebConfig.ProductDetail;
    var productId = WebConfig.Product;
    var lst = string.Join(",", Model.ListItem.Select(c => c.ID).Take(6));
}
@if (Request["doAction"] == "setting")
{
}
else
{
    <div class="sec-home sec-slider">
        @Gallery.ModuleSys(Model.CtrUrl, Model.CtrId)
        <div class="container">
            <div class="sec-slider__title">
                <h3>@Resources.Resource.sanpham</h3>
            </div>
            <div class="sec-slider__product">
                <div class="productFilter">
                    @foreach (var item in Model.ListItem.Take(6))
                    {
                        <a class="productFilter__item" href="/@item.Slug-p@(productId)c@(item.ID)">@item.Name</a>
                    }
                </div>
                @Html.Action("ListProductHome", "Product", new { Area = "Product", listId = lst })
                <div class="sec-slider__read"><a class="btn btn-primary btn-icon-right" href="/san-pham-p@(productId)c5">@Resources.Resource.xemtatca<i class="ion-chevron-right"></i></a></div>
            </div>
        </div>
    </div>
}

