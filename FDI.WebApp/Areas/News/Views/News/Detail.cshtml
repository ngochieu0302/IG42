@using FDI.Utils
@model FDI.Simple.ModelNewsItem
@{
    var pageId = WebConfig.NewDetail;
    var newsId = WebConfig.NewsId;
}
<div class="blog-item-wrapper">
    @Gallery.ModuleSys(Model.CtrUrl, Model.CtrId)
    @if (Model.NewsItem != null)
    {
        <div class="blog-post-item blog-details-post">
            <div class="blog-content">
                <h1 class="blog-title">
                    @Model.NewsItem.Title
                </h1>
                <div class="blog-meta">
                    <p>@Model.NewsItem.DateCreated.Value.ToShortDateString()</p>
                </div>
                <div class="entry-summary">
                    @Html.Raw(Model.NewsItem.Details)
                    <div class="tag-line">
                        @if (Model.NewsItem.Tags != null && Model.NewsItem.Tags.Any())
                        {
                            <h6>Tag :</h6>
                            foreach (var item in Model.NewsItem.Tags)
                            {
                            <a href="/tag/@item.NameAscii">@item.Name ,</a>
                            }
                        }
                    </div>
                    <div class="blog-share-link">
                        <h6>Share :</h6>
                        <div class="blog-social-icon">

                            <div class="social-like">
                                <div id="fb-root"></div>
                                <div>
                                    <div class="fb-like" style="float: left; padding-top: -10px; margin-right: 5px;" data-href="@Request.Url" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>
                                    <div style="margin-top: 2px; float: left">
                                        <a class="twitter-share-button" style="margin-right: 5px; padding-top: -10px;" href="@Request.Url">Tweet</a>
                                        <div  class="zalo-share-button" data-href="@Request.Url" data-oaid="291158372821215385" data-layout="1" data-color="blue" data-customize=false></div>
                                        <g:plus action="share" data-href="@Request.Url" data-annotation="bubble"></g:plus>
                                    </div>
                                    <div class="zalo-follow-only-button" style="margin-top: 2px" data-oaid="291158372821215385"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- blog post item end -->
        <!-- comment area start -->
        <div class="comment-section section-padding">
            <div class="sec-home sec-slider">
                <div class="fb-comments" data-href="@Request.Url" data-width="825" data-numposts="10"></div>
            </div>
        </div>
        
    }
    <!-- blog post item start -->
</div>

