@using FDI.Utils
@model FDI.Simple.ModelPartnerItem
@{
    ViewBag.Title = "ListNews";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover " role="grid">
                <colgroup>
                    <col class="colgroup check"/>
                    <col class="colgroup indentity"/>
                    <col class="colgroup salarry"/>
                    <col/>
                    <col/>
                    <col class="colgroup action-3"/>
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll"/>
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID<span /></a></th>
                    <th class="text-center">Hình ảnh</th>
                    <th><a href="#Field=Title">Tiêu đề<span /></a></th>
                    <th class="text-center"><a href="#Field=IsShow">Hiển thị<span /></a></th>
                    <th class="text-right">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @{
                    foreach (var item in Model.ListItem)
                    {
                        <tr title="@item.Name">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td class="text-center">@item.ID</td>
                            <td>
                               <img src="@item.PictureUrl.UploadPicture()" class="img-responsive"/>

                            </td>
                            <td>@Grid.DisplayShowStrike(item.Name, item.IsShow == true)</td>
                            <td class="text-center">
                                @Grid.ActionShow(item.ID, item.Name, item.IsShow)
                            </td>
                            <td class="text-right">
                                @Grid.ActionView(item.ID, item.Name)
                                @Grid.ActionEdit(item.ID, item.Name)
                                @Grid.ActionDelete(item.ID, item.Name)
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
