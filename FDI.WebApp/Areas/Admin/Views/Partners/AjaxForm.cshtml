@model FDI.Base.Partner
@{
    ViewBag.Title = ViewBag.ActionText + " bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(function () {
        registerGallery();
        LoadCKEDITOR('Details', true);
        $("#AjaxForm").validate({
            rules: {
                Name: { required: true, minlength: 3 },
                Slug:
                {
                    required: true,
                    remote: "@Url.Action("CheckTitleAsciiExits", "Partners", new { id = Model.ID })"
                },
                Description: {
                    maxlength: 500
                }
            },
            messages: {
                Name:
                {
                    required: "Trường bắt này là bắt buộ.",
                    minlength: "Tên quá ngắn.",
                },
                Slug:
                {
                    required: "Trường này là bắt buộc",
                    minlength: "Url quá ngắn.",
                    remote: "Link này đã tồn tại"
                },
                Description: {
                    maxlength: "Độ dài tối đa 500 ký tự.",

                }
            },
            submitHandler: function () {
                var pictureId = $("#Value_DefaultImages").val();
                if (pictureId == "") {
                    $("#errorPicture").show();
                    return false;
                }
                updateEditor();
                $.post(urlPostAction, $("#AjaxForm").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").modal('hide'); //Đóng form thêm mới - sửa
                        var linkFW = '#Page=' + getParameters("Page", 1) + '&RowPerPage=' + getParameters("RowPerPage", 50);
                        createCloseMessage("Thông báo", data.Message, linkFW + '&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + '');
                    }
                });
                return false;
            }
        });

        $("#Name").on('keyup', function (e) {
            e.preventDefault();
            $('#Slug').val(RemoveUnicode($(this).val()));
            $('#SEOTitle').val($(this).val());
            $('#SEODescription').val($(this).val());
            $('#SEOKeyword').val($(this).val());
        });
    });
</script>
<form id="AjaxForm">
    <input type="hidden" name="do" id="do" value="@ViewBag.Action"/>
    <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID"/>
    <input type="hidden" name="TagValues" id="TagValues" />
    <div class="modal-body">
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-users"></i>Thông tin về đối tác
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên đối tác</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" id="Name" value="@Model.Name" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Hình ảnh đại diện</label>
                            <div class="col-sm-10">
                                <button type="button" class="btn btn-sm btn-primary" data-type="gallery" data-type-value="2" data-multi="false" data-container="Images" data-value="Value_Images"><span class="fa fa-picture-o"></span>Chọn hỉnh ảnh đại diện</button>
                                <label id="errorPicture" class="error" style="display: none">Chưa chọn hình ảnh.</label>
                                <input type="hidden" name="Value_Images" id="Value_Images" value="@Model.PictureID" data-multi="false" />
                                <div id="Text_Images">
                                    <div class="gridView list-images-popup">
                                        @if (Model.PictureID > 0)
                                        {
                                            <div class="image-product" id="@Model.Gallery_Picture.ID">
                                                <div class="image">
                                                    @Gallery.DisplayImage(Model.Gallery_Picture.Folder + Model.Gallery_Picture.Url, 120)
                                                    <div class="option">
                                                        <button type="button" class="btn red deleteImg" data-id="@Model.Gallery_Picture.ID" data-ctn="Images"><i class="fa fa-trash-o"></i></button>
                                                    </div>
                                                </div>
                                                <span>@Model.Gallery_Picture.Name</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Danh sách ảnh</label>
                            <div class="col-sm-10">
                                <button type="button" class="btn btn-sm btn-primary" data-type="gallery" data-type-value="2" data-multi="true" data-container="ImagesProducts" data-value="Value_ImagesProducts">
                                    <span class="fa fa-camera-retro"></span>Chọn hỉnh ảnh sản phẩm
                                </button>
                                <input type="hidden" name="Value_ImagesProducts" id="Value_ImagesProducts" value="@string.Join(",", Model.Gallery_Picture1.Select(c => c.ID))" data-multi="true" />
                                <div id="Text_ImagesProducts">
                                    <div class="gridView list-images-popup">
                                        @foreach (var item in Model.Gallery_Picture1)
                                        {
                                            <div class="image-product">
                                                <div class="image">
                                                    @Gallery.DisplayImage(item.Folder + item.Url, 120)
                                                    <div class="option">
                                                        <button type="button" class="btn red deleteImg" data-id="@item.ID" data-ctn="ImagesProducts"><i class="fa fa-trash-o"></i></button>
                                                    </div>
                                                </div>
                                                <span>@item.Name</span>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mô tả (Excerpt)</label>
                            <div class="col-sm-10">
                                <textarea rows="5" class="form-control" placeholder="..." name="Description" id="Description">@Model.Description</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nội dung chi tiết</label>
                            <div class="col-sm-10">
                                <textarea rows="10" class="form-control" placeholder="..." name="Details" id="Details">@Model.Details</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox col-md-6">
                                    <label>
                                        @Html.CheckBox("IsShow", true)Hiển thị
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-tags"></i>Hỗ trợ SEO
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">SEO permalink</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="Slug" id="Slug" value="@Model.Slug" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">SEO Title</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="SEOTitle" id="SEOTitle" value="@Model.SEOTitle" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">SEO Description</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="SEODescription" id="SEODescription" value="@Model.SEODescription" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">SEO Keyword</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="SEOKeyword" id="SEOKeyword" value="@Model.SEOKeyword" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button type="button" data-dismiss="modal" class="btn btn-default btn-sm">Đóng</button>
    </div>
</form>
