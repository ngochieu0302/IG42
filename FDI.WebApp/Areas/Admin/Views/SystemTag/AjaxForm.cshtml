@model FDI.Base.System_Tag
@{
    ViewBag.Title = ViewBag.ActionText + " từ khóa";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    @*var urlAutocomplete = '@Url.Action("AutoNews", "NewsContent")';
    var arrFileObj = new Array();
    Array.prototype.remove = function (el) {
        var idx = this.indexOf(el);
        if (idx != -1) {
