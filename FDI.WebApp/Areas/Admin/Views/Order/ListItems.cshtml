@using FDI.Utils
@model FDI.Simple.ModelOrderItem

@{
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th>Khách hàng</th>
                        <th>Điện thoại</th>
                        <th>Địa chỉ</th>
                        <th>Ngày đặt</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>

                @foreach (var item in Model.ListOrderItem)
                {
                    <tr title="@item.CustomerName">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                       
                        <td>
                            @item.CustomerName
                        </td>
                        <td>
                            @item.Mobile
                        </td>
                        <td>
                            @item.CutomerAddress
                        </td>
                        <td>
                            @item.DateCreated.DecimalToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @item.TotalPrice.Money()
                        </td>
                        
                        @if (item.Status == 1)
                        {
                            <td><span class="label label-danger">Đã hủy</span></td>
                        }
                        @if(item.Status == 2)
                        {
                            <td><span class="label label-default">Đang chờ xử lý</span></td>
                        }
                        @if(item.Status == 3)
                        {
                            <td><span class="label label-success">Đã hoàn thành</span></td>
                        }
                        <td class="btn-group">
                             @Grid.ActionView(item.ID, item.CustomerName)
                            @if (item.Status == 1 || item.Status == 2)
                            {
                               
                                @Grid.ActionEdit(item.ID, item.CustomerName)
                            }
                            
                            @*@Grid.ActionDelete(item.ID, item.CustomerName)*@
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
        var total = '@(Model.Total.HasValue ? Model.Total.Value : 0)';
        var totalpay = '@(Model.TotalPay.HasValue ? Model.TotalPay.Value : 0)';
        $('.bottom-pager').append('<span>Tổng : <i class="maskPrice">' + total + '</i>  vnđ</span><span>- Tổng hoàn thành: <i class="maskPrice">' + totalpay + '</i>  vnđ</span>');
    });
</script>
