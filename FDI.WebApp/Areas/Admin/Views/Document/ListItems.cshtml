@using FDI.Utils
@model FDI.Simple.ModelDocumentItem
@{
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
    var stt = 1;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" />
                        </th>
                        <th>STT</th>
                        <th>Tên tài liệu</th>
                        <th>Loại văn bản</th>
                        <th>Số hiệu</th>
                        <th>Ngày ban hành</th>
                        <th>Hiển thị</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>

                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td class="text-center">@(stt++)</td>
                        <td>
                            @Grid.DisplayShowStrike(item.Name, item.IsShow.HasValue && item.IsShow.Value)
                        </td>
                        <td>@item.CateName</td>
                        <td>@item.Number</td>
                        <td>
                            @(item.DateCreated != null ? item.DateCreated.Value.ToString("dd/MM/yyyy") : "")
                        </td>
                        <td>@Grid.ActionShow(item.ID,item.Name,item.IsShow)</td>
                        <td>
                            @Grid.ActionView(item.ID, item.Name)
                            @Grid.ActionEdit(item.ID, item.Name)
                            @Grid.ActionDelete(item.ID, item.Name)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>