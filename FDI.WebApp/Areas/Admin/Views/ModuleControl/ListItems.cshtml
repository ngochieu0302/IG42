@model FDI.Simple.ModelModuleControlItem

@{
    ViewBag.Title = "ListCity";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
    <!-- slider -->

}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" />
                        </th>
                        <th><a href="#Field=ID">ID<span /></a></th>
                        <th><a href="#Field=Title">Page<span /></a></th>
                        <th>Module</th>
                        <th>Action</th>
                        <th>Section</th>
                        <th>Sort</th>
                        <th colspan="2" style="width: 10%;">Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.PageName">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td>
                            @item.ID
                        </td>
                        <td>
                            @item.PageName
                        </td>

                        <td>
                            @item.Module
                        </td>
                        <td>
                            @item.Action
                        </td>
                        <td>
                            @item.Section
                        </td>
                        <td>
                            @item.Sort
                        </td>
                        <td class="btn-group">
                            @Grid.ActionEdit(item.ID, item.PageName)
                            @Grid.ActionDelete(item.ID, item.PageName)
                        </td>
                    </tr>
                }                
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>

