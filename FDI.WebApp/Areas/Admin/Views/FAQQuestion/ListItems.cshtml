@model FDI.Simple.ModelFAQQuestionItem
@{
    ViewBag.Title = "ListQuestion";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <thead>
                    <tr>
                        <th class="act_roles"><input value="" type="checkbox" /></th>
                        <th class="text-center" style="width: 40%;"><a href="#Field=Title">Tên câu hỏi<span /></a></th>
                        <th class="text-center">Chuyên mục</th>
                        <th class="text-center"><a href="#Field=AllowComment">Người gửi<span /></a></th>
                        <th class="text-center"><a href="#Field=IsShow">Ngày gửi<span /></a></th>
                        <th class="text-center">H.Thị</th>
                        <th class="text-center">Trả lời</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.Title">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>

                        <td>@Html.Raw(item.Content)</td>
                        <td>@item.Category.Name</td>
                        <td>@item.Fullname</td>
                        <td>@Convert.ToDateTime(item.DateCreated).ToString("dd/MM/yyyy")</td>
                        <td class="text-center">@Grid.ActionShow(item.ID, item.Title, item.IsShow)</td>
                        <td>
                            <a href="#@item.ID" class="btn btn-sm btn-default" data-toggle="tooltip" data-placement="top" data-original-title="Chỉnh sửa: " data-event="reply" title="Trả lời "><i class="fa fa-mail-reply" style="color: #04A827;"></i></a>
                        </td>
                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.Title)
                            @Grid.ActionEdit(item.ID, item.Title)
                            @Grid.ActionDelete(item.ID, item.Title)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');

        $('#mygird .gridView [data-event="reply"]').click(function () {

            var titleDiag = $(this).attr("title");
            if (titleDiag == '')
                titleDiag = 'Sửa thông tin bản ghi';

            var urlRequest = '';
            if (urlForm.indexOf('?') > 0)
                urlRequest = urlReply + '&do=reply&ItemId=' + $(this).attr("href").substring(1);
            else
                urlRequest = urlReply + '?do=reply&ItemId=' + $(this).attr("href").substring(1);
            FdiDialog(urlRequest, titleDiag, formHeight, formWidth);
            return false;
        });

    });
</script>
