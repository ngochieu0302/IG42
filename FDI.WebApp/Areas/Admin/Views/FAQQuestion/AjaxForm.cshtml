@model FDI.Base.FAQ_Question
@{
    ViewBag.Title = ViewBag.ActionText + " câu hỏi";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<script type="text/javascript">
    $(function () {
        LoadCKEDITOR('Content', true);
        $("#frm-modal").validate({
            rules: {
                Title:
                {
                    required: true,
                    minlength: 3,
                    maxlength: 255
                },
                Fullname:
                {
                    required: true,
                    minlength: 3,
                    maxlength: 255
                },
                Email:
                {
                    email: true,
                    maxlength: 150
                },
                Phone:
                {
                    required: true,
                    minlength: 8,
                    maxlength: 13,
                    number: true
                },
                CategoryID:
                {
                    required: true
                }

            },
            messages: {
                Title:
                {
                    required: "Trường này là bắt buộc.",
                    minlength: "Vui lòng nhập ít nhất 3 ký tự."
                },
                Fullname:
                {
                    required: "Trường này là bắt buộc.",
                    minlength: "Vui lòng nhập ít nhất 3 ký tự."
                },
                Email:
                {
                    email: "Vui lòng nhập một địa chỉ email hợp lệ.",
                    minlength: "Vui lòng nhập ít nhất 3 ký tự."
                },
                Phone:
                {
                    required: "Trường này là bắt buộc.",
                    minlength: "Vui lòng nhập số điện thoại hợp lệ.",
                    maxlength: "Vui lòng nhập số điện thoại hợp lệ.",
                    number: "Vui lòng nhập số điện thoại hợp lệ."
                },
                CategoryID:
                {
                    required: "Trường này là bắt buộc."
                }
            },
            submitHandler: function () { //onSubmit
                updateEditor();
                $.post(urlPostAction, $("#frm-modal").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").modal('hide');
                        var linkFw = '#Page=' + getParameters("Page", 1) + '&RowPerPage=' + getParameters("RowPerPage", 50);
                        createCloseMessage("Thông báo", data.Message, linkFw + '&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + '');
                    }
                });
                return false;
            }
        });

    });
</script>

<form id="frm-modal">
    <div class="modal-body">
        @Html.AntiForgeryToken()
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-newspaper-o"></i>Thông tin về bài viết
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Chuyên mục câu hỏi</label>
                            <div class="col-sm-10">
                                <select name="CategoryID" id="CategoryID" class="form-control">
                                    <option value="">-- Chọn chuyên mục ---</option>
                                    @foreach (var item in ViewBag.CategoryID)
                                    {
                                        <option value="@item.ID" @((item.ID == Model.CategoryID) ? " selected" : string.Empty)>@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Họ tên người gửi</label>
                            <div class="col-sm-10">
                                <input type="text" name="Fullname" id="Fullname" placeholder="..." value="@Model.Fullname" class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Số điện thoại</label>
                            <div class="col-sm-10">
                                <input type="text" name="Phone" id="Phone" value="@Model.Phone" placeholder="..." class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Địa chỉ</label>
                            <div class="col-sm-10">
                                <input type="text" name="Address" id="Address" value="@Model.Address" placeholder="..." class="form-control" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Email</label>
                            <div class="col-sm-10">
                                <input type="text" name="Email" id="Email" value="@Model.Email" placeholder="..." class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tiêu đề</label>
                            <div class="col-sm-10">
                                <input type="text" name="Title" id="Title" value="@Model.Title" placeholder="..." class="form-control" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Nội dung chi tiết</label>
                            <div class="col-sm-10">
                                <textarea rows="10" class="form-control" placeholder="..." name="Content" id="Content">@Model.Content</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox col-md-6">
                                    <label>
                                        @Html.CheckBox("IsShow") Hiện thị
                                    </label>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật</button>
        <button type="button" data-dismiss="modal" class="btn btn-default btn-sm">Đóng</button>
    </div>
</form>