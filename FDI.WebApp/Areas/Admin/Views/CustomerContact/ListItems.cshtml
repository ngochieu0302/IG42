@model FDI.Simple.ModelCustomerContactItem

@{
    ViewBag.Title = "ListItems";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col class="colgroup action" />
                </colgroup>
                <thead>
                    <tr>
                        <th class="act_roles">
                            <input value="" type="checkbox" class="checkAll" />
                        </th>
                        <th>ID</th>
                        <th>Họ tên</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <td>Tiêu đề</td>
                        <td>Nội dung</td>
                        <th><a href="#Field=CreatedOnUtc">Ngày gửi<span /></a></th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Duyệt</th>
                        <th class="text-center">Thao tác</th>
                    </tr>
                </thead>
                @foreach (var item in Model.ListItem)
                {
                    <tr title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td class="text-center">@item.ID</td>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@item.Phone</td>
                        <td>@item.Subject</td>
                        <td>@item.Message</td>
                        <td>@item.CreatedOnUtc.Value.ToString("dd/MM/yyyy hh:mm")</td>
                        @if (item.Status == true)
                        {
                            <td><span class="label label-success">Đã liên hệ</span></td>
                        }
                        else
                        {
                            <td><span class="label label-default">Chưa liên hệ</span></td>
                        }
                        <td class="text-center">
                            @Grid.ActionActive(item.ID, item.Name, item.Status)
                        </td>
                        <td class="text-right">
                            @Grid.ActionView(item.ID, item.Name)
                            @Grid.ActionDelete(item.ID, item.Name)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
