@model FDI.Base.System_District
@{
    ViewBag.Title = ViewBag.ActionText + " quận huyện";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<link href="/Content/Admin/plugins/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
<script src="/Content/Admin/plugins/select2/js/select2.full.min.js" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".select2").select2({
            width: "200px",
        });
        $("#SystemDistrictForm").validate({
            rules: {
                Name:
                {
                    required: true,
                    minlength: 3,
                    maxlength: 100
                },
                CityID:
                {
                    required: true
                },
                Description:
                {
                    minlength: 3,
                    maxlength: 500
                }
            },
            messages: {
                Name: "Tên quận huyện không được để trống !",
                CityID: "Bạn chưa chọn tỉnh thành !"
            },

            submitHandler: function () { //onSubmit
                $.post(urlPostAction, $("#SystemDistrictForm").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").modal('hide'); //Đóng form thêm mới - sửa
                        createCloseMessage("Thông báo", data.Message, '#Page=1&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + ''); // Tạo thông báo khi click đóng thì chuyển đến url đích
                    }
                });
                return false;
            }
        });

    });
</script>

<form id="SystemDistrictForm">
    <div class="modal-body">
        <input type="hidden" name="do" id="do" value="@ViewBag.Action" />
        <input type="hidden" name="ItemID" id="ItemID" value="@Model.ID" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-map-marker"></i>Thông tin về quận huyện
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tên quận huyện</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" placeholder="..." name="Name" @(ViewBag.Action.ToString().Equals("Add") ? "class=autoPermalink" : "") id="Name" value="@Model.Name" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Tỉnh thành phố</label>
                            <div class="col-sm-10">
                                <select name="CityID" id="CityID" class="select2">
                                    <option selected="">Chọn Thành phố/Huyện</option>
                                    @foreach (var item in ViewBag.DistrictCityID)
                                    {
                                        <option value="@item.ID" @((item.ID == Model.ID) ? " selected" : string.Empty)>@item.Name</option>
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mô tả</label>
                            <div class="col-sm-10">
                                <textarea rows="8" id="Description" name="Description" class="form-control">@Model.Description</textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <div class="checkbox col-md-6">
                                    <label>
                                        @Html.CheckBox("Show") Hiện thị
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-primary">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-info">Nhập lại</button>
        <button type="button" data-dismiss="modal" class="btn btn-default btn-sm">Đóng</button>
    </div>
</form>
