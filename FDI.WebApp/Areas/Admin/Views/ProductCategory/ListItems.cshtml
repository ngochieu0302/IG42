@using FDI.Utils
@model FDI.Simple.ModelShopProductDetailItem
@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
    var pageId = WebConfig.ProductDetail;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col style="width: 120px"/>
                    <col />
                    <col />
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll"/>
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID<span /></a></th>
                    <th>Hình ảnh</th>
                    <th><a href="#Field=Name">Tên SP<span /></a></th>
                    <th class="text-center"><a href="#Field=IsShow">Hiển thị<span /></a></th>
                    <th class="text-center"><a href="#Field=IsHot">Hot<span /></a></th>
                    <th class="text-center">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.ListItem)
                {
                    <tr data-id="@item.ID" title="@item.Name">
                        <td class="act_roles">
                            <input type="checkbox" value="@item.ID" class="check">
                        </td>
                        <td class="text-center">@item.ID</td>
                        <td><img src="@(Utility._dimg)@item.UrlPicture.UploadPicture()" class="img-responsive"/></td>
                        <td>@item.Name</td>
                        <td class="text-center">@Grid.ActionShow(item.ID, item.Name, item.IsShow)</td>
                        <td class="text-center">@Grid.DisplayShow(item.Name, item.IsHot == true)</td>
                        @*<td class="text-center">@Grid.ActionQuickView(item.ID, string.Format("{0}-p{1}c{2}",item.NameAscii,pageId,item.ID))</td>*@
                        <td class="text-right">
                            <a  class="btn btn-sm btn-default" data-id="@item.ID" data-event="addProduct" title="Thêm mới sản phẩm"><i class="fa fa-plus"></i></a>                            
                            @Grid.ActionView(item.ID, item.Name)
                            @Grid.ActionEdit(item.ID, item.Name)
                            @Grid.ActionDelete(item.ID, item.Name)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
        $("[data-event='addProduct']").click(function () {
            var urlFormAdd = '@Url.Action("AjaxFormAdd","ProductCategory")';
            //FdiDialog("/ProductCategory/AjaxFormAdd?do=UserModule&productId=" + $(this).attr("data-id"), "Thêm sản phẩm", formHeight, formWidth);
            var titleDiag = $(this).attr("title");
            if (titleDiag === "")
                titleDiag = "Thêm mới sản phẩm";
            var urlRequest;
            if (urlFormAdd.indexOf("?") > 0)
                urlRequest = urlFormAdd + "&do=UserModule&productId=" + $(this).attr("data-id");
            else
                urlRequest = urlFormAdd + "?do=UserModule&productId=" + $(this).attr("data-id");
            FdiDialog(urlRequest, titleDiag, formHeight);
            return false;
        });
    });
</script>
