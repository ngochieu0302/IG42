@model FDI.Base.System_Color

@{
    ViewBag.Title = "Xem chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<fieldset class="forms">
    <table class="tableforms tabledetails" cellspacing="1" width="100%">
        <tr>
            <td style="width:90px;" class="label"><label>Tên màu sắc</label></td>
            <td>
                @Html.DisplayFor(model => model.Name)
            </td>
        </tr>
        
        <tr>
            <td class="label"><label>Gam màu</label></td>
            <td style="background: @(Model.Value)">&nbsp;</td>
        </tr>
        
      @*  <tr>
            <td class="label"><label>Sản phẩm</label></td>
            <td>
                @Model.Shop_Product.Count()
            </td>
        </tr>*@
        
        <tr>
            <td class="label"><label>Sử dụng</label></td>
            <td>
                @((Model.IsShow) ? "Có" : "không")
            </td>
        </tr>

        <tr>
            <td class="label"><label>Mô tả</label></td>
            <td>
                @Model.Description
            </td>
        </tr>

    </table>
</fieldset>
