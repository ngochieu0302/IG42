@model FDI.Base.System_Country

@{
    ViewBag.Title = "Xem chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}

<div class="modal-body">
    <div class="portlet box green">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-map-marker"></i>Thông tin về quốc gia
            </div>
        </div>
        <div class="portlet-body form">
            <div class="form-body">
                <table class="table table-bordered">
                    <tr>
                        <td style="width: 200px"><label>Tên quốc gia</label></td>
                        <td>
                            @Html.DisplayFor(model => model.Name)
                        </td>
                    </tr>
                    <tr>
                        <td><label>Mã quốc gia</label></td>
                        <td>
                            @Html.DisplayFor(model => model.Code)
                        </td>
                    </tr>

                    <tr>
                        <td><label>Hiển thị</label></td>
                        <td>
                            @Grid.DisplayShow(Model.Name, Model.Show == true)
                        </td>
                    </tr>

                    <tr>
                        <td><label>Mô tả</label></td>
                        <td>
                            @Html.DisplayFor(model => model.Description)
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" data-dismiss="modal" class="btn btn-primary btn-sm">Đóng</button>
</div>
