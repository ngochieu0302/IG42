@model IEnumerable<FDI.Simple.MenusItem>
@{
    ViewBag.Title = "AjaxSort";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
    var Index = 0;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#MenuFormSort").validate({
            submitHandler: function () { //onSubmit
                getValueOrder('MenuFormSort', 'OrderValues');
                $.post(urlPostAction, $("#MenuFormSort").find("input,textarea,select,hidden").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").modal('hide'); //Đóng form thêm mới - sửa
                        var linkFW = '#Page=' + getParameters("Page", 1) + '&RowPerPage=' + getParameters("RowPerPage", 50);
                        createCloseMessage("Thông báo", data.Message, linkFW + '&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + '');
                    }
                });
                return false;
            }
        });

        
    });
</script>
<form id="MenuFormSort">
    <input type="hidden" id="do" name="do" value="Order" />
    <input type="hidden" id="OrderValues" name="OrderValues" />
    <table class="gridView" cellspacing="1">
        <tr>
            <th>Tiêu đề</th>
            <th>Xắp xếp</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <select name="ViewOrder@(Index)" id="@item.ID" onchange="Reorder(this, @Index, @Model.Count())" class="form-control input-small">
                        @for (var number = 1; number < Model.Count() + 1; number++)
                        { 
                            <option value="@number"@((number == Index + 1) ? " selected" : string.Empty)>@number</option>
                        }
                    </select>
                </td>
            </tr>
                        Index++;
        }
    </table>
    <div style="display: none;">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">Cập nhật thứ tự</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
         <button type="button" data-dismiss="modal" class="btn btn-default btn-sm">Đóng</button>
    </div>
</form>
