@using FDI.Utils
@model FDI.Simple.ModelCustomerItem

@{
    ViewBag.Title = "ListItems";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check"/>
                    <col class="colgroup indentity"/>
                    <col/>
                    <col/>
                    <col/>
                    <col/>
                    <col/>
                    <col class="colgroup action-3"/>
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll"/>
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID</a></th>
                    <th><a href="#Field=Fullname">Khách hàng</a></th>
                    <th><a href="#Field=Email">Email</a></th>
                    <th><a href="#Field=Mobile">Số ĐT</a></th>
                    <th><a href="#Field=CreatedOnUtc">Ngày đăng ký</a></th>
                    <th class="text-center"><a href="#Field=IsActive">Kích hoạt</a></th>
                    <th class="text-center">Thao tác</th>
                </tr>
                </thead>
                <tbody>

                @{
                    foreach (var item in Model.ListItem)
                    {
                        <tr title="@item.Fullname">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td class="text-center">@item.ID</td>

                            <td>@Grid.DisplayShowStrike(item.Fullname, item.IsActive == true)</td>
                            <td>@item.Email</td>
                            <td>@item.Mobile</td>
                            <td>@item.DateCreated.Value.Format("dd/MM/yyyy")</td>
                            <td class="text-center">
                                @Grid.ActionShow(item.ID, item.Fullname, item.IsActive)
                            </td>
                            <td class="text-right">
                                @Grid.ActionView(item.ID, item.Fullname)
                                @Grid.ActionEdit(item.ID, item.Fullname)
                                @Grid.ActionDelete(item.ID, item.Fullname)
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
