@{
    ViewBag.Title = "Sắp xếp chuyên mục";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
    var Index = 0;
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#CategoryForm").validate({

            submitHandler: function () { //onSubmit
                getValueOrder('CategoryForm', 'OrderValues');
                $.post(urlPostAction, $("#CategoryForm").serialize(), function (data) {
                    if (data.Erros)
                        createMessage("Đã có lỗi xảy ra", data.Message); // Tạo thông báo lỗi
                    else {
                        $("#dialog-form").modal('hide');
                        var linkFW = '#Page=' + getParameters("Page", 1) + '&RowPerPage=' + getParameters("RowPerPage", 50);
                        createCloseMessage("Thông báo", data.Message, linkFW + '&itemId=' + data.ID + '&message=' + data.Message + '&temp=' + Math.floor(Math.random() * 11) + '');
                    }
                });
                return false;
            }
        });
    });
</script>
<form id="CategoryForm">
    <div class="modal-body">
        <input type="hidden" id="do" name="do" value="Order" />
        <input type="hidden" id="OrderValues" name="OrderValues" />
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-database"></i>Thông tin về danh mục
                </div>
            </div>
            <div class="portlet-body form">
                <div class="form-body">
                    <table class="table table-bordered">
                        <tr>
                            <th>Tiêu đề</th>
                            <th>Xắp xếp</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>
                                    <select name="ViewOrder@(Index)" id="@item.ID" onchange="Reorder(this, @Index, @Model.Count)">
                                        @for (var number = 1; number < Model.Count + 1; number++)
                                        {
                                            <option value="@number" @((number == Index + 1) ? " selected" : string.Empty)>@number</option>
                                        }
                                    </select>
                                </td>
                            </tr>
                            Index++;
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button id="btnSave" type="submit" class="btn btn-sm btn-success">@ViewBag.ActionText</button>
        <button id="btnReset" type="reset" name="reset" class="btn btn-sm btn-success">Nhập lại</button>
         <button type="button" data-dismiss="modal" class="btn btn-default btn-sm">Đóng</button>
    </div>
</form>
