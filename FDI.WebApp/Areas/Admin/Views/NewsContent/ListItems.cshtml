@using FDI.Utils
@model FDI.Simple.ModelNewsItem
@{
    ViewBag.Title = "ListNews";
    Layout = "~/Areas/Admin/Views/Shared/_Ajax.cshtml";
    var pageId = WebConfig.NewDetail;
}
<div id="mygird">
    <div class="box-control">
        <div class="scrollable box-control-content">
            <table class="gridView table table-striped table-bordered table-hover table-orimid" role="grid">
                <colgroup>
                    <col class="colgroup check" />
                    <col class="colgroup indentity" />
                    <col />
                    <col />
                    <col />
                    <col />
                    <col class="colgroup action-3" />
                </colgroup>
                <thead>
                <tr>
                    <th class="act_roles">
                        <input value="" type="checkbox" class="checkAll"/>
                    </th>
                    <th class="text-center"><a href="#Field=ID">ID<span /></a></th>
                    <th><a href="#Field=Title">Tên bài viết<span /></a></th>
                    <th class="text-center"><a href="#Field=IsShow">Hiển thị<span /></a></th>
                    <th class="text-center"><a href="#Field=IsHot">Hot<span /></a></th>
                    <th class="text-center">Xem nhanh</th>
                    <th class="text-right">Thao tác</th>
                </tr>
                </thead>
                <tbody>
                @{
                    foreach (var item in Model.ListItem)
                    {
                        <tr title="@item.Title">
                            <td class="act_roles">
                                <input type="checkbox" value="@item.ID" class="check">
                            </td>
                            <td class="text-center">@item.ID</td>
                            <td>@Grid.DisplayShowStrike(item.Title, item.IsShow == true)</td>
                            <td class="text-center">
                                @Grid.ActionShow(item.ID, item.Title, item.IsShow)
                            </td>
                            <td class="text-center">@Grid.DisplayShow(item.Title, item.IsHot == true)</td>
                            <td class="text-center">@Grid.ActionQuickView(item.ID, item.TitleAscii+"-p" + pageId +"c"+item.ID)</td>
                            <td class="text-right">
                                @Grid.ActionView(item.ID, item.Title)
                                @Grid.ActionEdit(item.ID, item.Title)
                                @Grid.ActionDelete(item.ID, item.Title)
                            </td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
    <div class="footer-control">
        @if (Model.PageHtml != null)
        {
            @Html.Raw(Model.PageHtml)
        }
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        registerGridView('#mygird');
    });
</script>
