@model IEnumerable<FDI.Base.ModulePage>

<form id="form-editmodule" class="box-edit-setting">
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 control-label">Tên bài viết</label>
            <div class="col-sm-8">
                <select class="form-control" name="sl-sysPage" id="sl-sysPage">
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col-sm-3 control-label">ControlID</label>
            <div class="col-sm-8">
                <input name="ControlID" id="ControlID" class="form-control" value=""/>
            </div>
        </div>
    </div>
    <div style="display: none;">
        <button type="button" id="saveModuleCopy"></button>
    </div>
</form>

<script>
    $("body").on("click", "#saveModuleCopy", function () {
        $.post("/SystemModuleSetting/SystemModuleSetting/SaveModuleCopy?idModule=@ViewBag.key", $("#form-editmodule").serialize(), function (data) {
            if (!data.Erros) {
                window.location.href = window.location.href;
            }
        });
    });
</script>