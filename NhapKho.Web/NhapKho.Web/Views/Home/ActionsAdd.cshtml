@using NhapKho.Web.Models
@model ProductImportItem

@{
    ViewBag.Title = "Inmavach";
    var objbar = new Barcodecs();
}
<script src="~/Content/Admin/js/numeral.min.js"></script>
<script src="~/Content/Admin/js/JsBarcode.all.min.js"></script>
<script>
    $(function () {
        JsBarcode("#barcode", "@Model.CodeSku", {
            fontSize: 16,
            width: 1.5,
            height: 40,
            marginBottom: 0
        });
    });
</script>
@if (Model != null)
{
    <div class="box-pr-payment" style="height: 148px !important; width: 220px !important; border: 1px solid ">
        <div class="pr-content" id="contentPrint" style="padding: 0px !important">

            <div class="row" style="margin: 0px !important">
                <div class="form-group " style="padding: 0px !important; margin: 0px !important">
                    <div style="text-align: center; display: block; width: 100%">
                        <strong style="font-size: 14px;">@Model.Name</strong>
                    </div>
                </div>
                <div class="form-group " style="padding: 0px !important; margin: 0px !important;">
                    <div style="display: block; width: 100%; text-align: center">
                        <svg id="barcode"></svg>
                    </div>
                </div>
            </div>
            <div class="row">
                
                <div class="form-group ">
                    <div class="col-xs-6"><strong style="font-size: 10px">NSX: @DateTime.Now.ToString("dd/MM/yyyy")</strong></div>
                    <div class="col-xs-6" style="padding: 0px !important"><strong style="font-size: 10px">Số lượng: @(Model.Quantity)kg</strong></div>
                </div>
                <div class="form-group ">
                        
                    <div class="col-xs-6"><strong style="font-size: 10px">HSD: @DateTime.Now.AddDays(Model.QuantityDay ?? 1).ToString("dd/MM/yyyy")</strong></div>
                    <div class="col-xs-6" style="padding: 0px !important"><strong style="font-size: 10px">Tổng: @(string.Format("{0:0,0}", Model.Price * Model.Quantity)) đ</strong></div>
                </div>
            </div>
        </div>
    </div>

}